/****Cobro por Cuenta de Terceros/OFB:post:PBoperadorCREM
* NOMBRE
*   OFB:post:PBoperadorCREM
* DESCRIPCION
*   Despliega el picklist de seleccion de Operadores Cajeros para CREM
* ENTRADAS
*   Parámetros de entrada de la rutina, sean argumentos o campos que tiene en cuenta
* SALIDAS
*   Campos modificados como resultado o returns cuyos valores sean no triviales
* IMPACTOS
*   Otros objetos que deberán ser analizados al modificar el objeto actual
* REFERENCIADO POR
*   giros:BUTreporte_CREM
* DOCUMENTACION
*   https://jirats.siemens.com.ar/jira/browse/AUT-1684
* SOURCE
*/
#include "postpb.h"

SUB post:PBoperadorCREM
    LOCAL l_last_button LIKE drv:last_button
    
    l_last_button = drv:last_button 
    drv:button = drv:last_button    
    CALL drv:but_down_disable
    CALL drv:all_but_disable

    //INIT 71 1
    CALL drv:MISCf_sacombopl ("PICoperador_CCT", common:csr_string,drv:button)
    IF (retval >= 0) THEN
        post:operador_CCT = substr(common:csr_string,0,14)
        CALL CSR:trimfield(post:operador_CCT)
        REFRESH post:operador_CCT
    END IF

    CALL drv:back_but_status
    drv:button = l_last_button
    CALL drv:but_up_enable

END SUB

/*******/
