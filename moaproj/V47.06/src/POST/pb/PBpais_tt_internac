/****o* International Postal Services/OFB:post:PBpais_tt_internac
* NOMBRE
*   OFB:post:PBpais_tt_internac
* DESCRIPCION
*   Despliega lista de paises segun Destino.
* ENTRADAS
*   Parámetros de entrada de la rutina, sean argumentos o campos que tiene en cuenta
* SALIDAS
*   RETURN (-2):No pudo seleccionar pais.
* IMPACTOS
*   Otros objetos que deberán ser analizados al modificar el objeto actual
* REFERENCIADO POR
*   OFB:post:PBpais_tt_inter1, OFB:post:PBpais_tt_inter2, OFB:post:PBpais_tt_inter3, OFB:post:PBpais_tt_inter4,
*   OFB:post:PBpais_tt_inter5, OFB:post:PBpais_tt_inter6, OFB:post:PBpais_tt_inter7, OFB:post:PBpais_tt_inter8,
*   OFB:post:PBpais_tt_inter9, OFB:post:PBpais_tt_inter10,
* DOCUMENTACION
*   https://jirats.atos.net.ar/jira/browse/AUT-2033
* SOURCE
*/
#include "postpb.h"

SUB post:PBpais_tt_internac	
	LOCAL l_last_button LIKE drv:last_button
	LOCAL l_retval LIKE lib:err_retval
	
	l_last_button = drv:last_button 
	drv:button = drv:last_button    
	CALL drv:but_down_disable
	CALL drv:all_but_disable
	DISABLECONTROL drv:TB1
	DISABLECONTROL drv:TB2

	//Selecciona los paises del destino	
	CALL post:CDSpais_tt_internac
	l_retval = retval
	CALL drv:back_but_status
	drv:button = l_last_button
	CALL drv:but_up_enable

	IF (post:adt_serv_ips_Rpais == "S" && \
	   (pag_act == 0 || pag_act.numchars == 0) && post:cantidad > 1) THEN
		ENABLECONTROL drv:TB1
	ELSE
		DISABLECONTROL drv:TB1
	END IF
	IF (post:adt_serv_ips_cont == "M" && \
	   (pag_act == 0 || pag_act.numchars == 0) && post:cantidad > 1) THEN
		ENABLECONTROL drv:TB2
	ELSE
		DISABLECONTROL drv:TB2
	END IF

	IF (l_retval < 0) THEN
		RESETVALDONE post:ips_pais[siaf:i]
		RETURN (-2)
	END IF
	SETVALDONE post:ips_pais[siaf:i]
	//CALL csr:set_currentfield post:ips_pais[siaf:i]	    
	//NEXTFIELD post:ips_pais[siaf:i]
END SUB

/*******/
