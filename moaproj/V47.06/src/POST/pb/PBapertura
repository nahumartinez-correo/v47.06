/****o* Pendientes de agrupación/OFB:post:PBapertura
* NOMBRE
*   OFB:post:PBapertura
* DESCRIPCION
*   Comportamiento del objeto (obligatorio)
* ENTRADAS
*   Parámetros de entrada de la rutina, sean argumentos o campos que tiene en cuenta
* SALIDAS
*   Campos modificados como resultado o returns cuyos valores sean no triviales
* IMPACTOS
*   Otros objetos que deberán ser analizados al modificar el objeto actual
* REFERENCIADO POR
*   Objetos que llaman al objeto documentado (obligatorio)
* DOCUMENTACION
*   Documentación relevante que deberá ser actualizada por la modificación de la rutina
* SOURCE
*/
#include "postpb.h"

SUB post:PBapertura
    drv:button = 28
    CALL drv:but_disable
    drv:button = drv:last_button
    CALL drv:but_down_disable
    drv:button = 1
    CALL drv:but_disable
    CALL CDSapertura_sel
    IF (RETVAL == 0) THEN
        MOVE adt_apertura_cod TO adt_apertura_cod
        CALL csr:proc_list(F_REFRESH,LST:LISTapertura_flds)
        setvaldone adt_apertura_cod
        drv:button = 1
        CALL drv:but_enable
        drv:button = 25
        CALL drv:but_enable
        drv:button = 26
        CALL drv:but_enable
        drv:button = 27
        CALL drv:but_disable
/*    ELSE
        drv:button = 25
        CALL drv:but_disable
        drv:button = 26
        CALL drv:but_disable
        drv:button = 27
        CALL drv:but_disable*/
    END IF
    drv:button = 1
    CALL drv:but_enable
    drv:button = drv:last_button
    CALL drv:but_up_enable
END SUB

/*******/
