/****o* Pendientes de agrupación/OFB:post:PBpromoOpcActuali
* NOMBRE
*   OFB:post:PBpromoOpcActuali
* DESCRIPCION
*   Comportamiento del objeto (obligatorio)
* ENTRADAS
*   Parámetros de entrada de la rutina, sean argumentos o campos que tiene en cuenta
* SALIDAS
*   Campos modificados como resultado o returns cuyos valores sean no triviales
* IMPACTOS
*   Otros objetos que deberán ser analizados al modificar el objeto actual
* REFERENCIADO POR
*   Objetos que llaman al objeto documentado (obligatorio)
* DOCUMENTACION
*   Documentación relevante que deberá ser actualizada por la modificación de la rutina
* SOURCE
*/
#include "postpb.h"

SUB post:PBpromoOpcActuali
	local l_str like common:csr_string
	drv:last_button = drv:button
    call drv:but_down_disable

	call post:MISCvalidarCargaOpc
	if (retval >= 0)
    	select (opc_promo_opcionales)
	    	case ELIGE_TODOS_OPCIONALES
				fprint common:csr_string, "%3s - %-10s - %-35s", TIPO_OPCIONAL, adt_promo_serv, SELECCION_TODOS_OPCIONALES
				fprint l_str, "%3s - %-10s - %-35s - %1s - %7s", TIPO_OPCIONAL, adt_promo_serv, SELECCION_TODOS_OPCIONALES, adt_promo_OpcTipoBon, adt_promo_OpcBon
				break
	    	case ELIGE_UN_OPCIONAL
				fprint common:csr_string, "%3s - %-10s - %-35s", TIPO_OPCIONAL, adt_promo_serv, adt_promo_opcional
				fprint l_str, "%3s - %-10s - %-35s - %1s - %7s", TIPO_OPCIONAL, adt_promo_serv, adt_promo_opcional, adt_promo_OpcTipoBon, adt_promo_OpcBon
				break
		end select
		call csr:PickOp PICKOP_SEARCH dsc:pic_promo_servicios common:csr_string
		idx = RETVAL
		if (idx >= 0)
			CALL CSR:myPickdelete(DSC:pic_promo_servicios,common:csr_string,idx)
			CALL csr:f_saaddpl dsc:post:pic_promo_servicios l_str
			;call  CSR:f_samodpl (dsc:pic_promo_servicios, common:csr_string, l_str, 0, idx)
			call post:ABMpromoOpcClear
			call post:ABMpromoOpcRefresh
			nextfield adt_promo_serv
	    else
			errmsg LST:common:errmsg_list,"EL ELEMENTO NO SE ENCUENTRA SELECCIONADO!!!"
		endif
	endif

    drv:button = drv:last_button
    call drv:but_up_enable
END SUB

/*******/
