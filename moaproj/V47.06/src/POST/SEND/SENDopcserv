/****o* Pendientes de agrupación/OFB:post:SENDopcserv
* NOMBRE
*   OFB:post:SENDopcserv
* DESCRIPCION
*   Comportamiento del objeto (obligatorio)
* ENTRADAS
*   Parámetros de entrada de la rutina, sean argumentos o campos que tiene en cuenta
* SALIDAS
*   Campos modificados como resultado o returns cuyos valores sean no triviales
* IMPACTOS
*   Otros objetos que deberán ser analizados al modificar el objeto actual
* REFERENCIADO POR
*   post:TRANabm_opcserv
* DOCUMENTACION
*   Documentación relevante que deberá ser actualizada por la modificación de la rutina
* SOURCE
*/
#include "postSEND.h"

SUB post:SENDopcserv
    LOCAL l_tabla LIKE admin:tabla 
    LOCAL l_INDCamposTablas LIKE post:INDCamposTablas 

    //SMC Autorizo Modificaciones
    call post:MISCAutorizoModif("OpcServ")
	if (retval < -1) then
		return (-2)
	endif
    if (retval == -1) then
	    IF (op:adt_temp_accion == "ACT.") THEN
			;CDS FINDAGAIN DSC:adt_opcserv_ctx_pl nolock
			if (posPickList != 0)
				CDS findn DSC:adt_opcserv_ctx_pl 1 posPickList
				;CDS SETRECORD DSC:adt_opcserv_ctx_pl posPickList
				posPickList = 0
			else
				if (eligioPickList)
					CDS FINDNEXT DSC:adt_opcserv_ctx_pl nolock
				else
					clearfield op:adt_temp_accion
					RETURN (-1)
				endif
			endif

			if (cdsretval == 0)
			    CDS EXTRACT DSC:adt_opcserv_ctx_pl ALL
		        CALL ABMopcserv_refresh
		        setvaldone adt_opcserv_opci
		        drv:button = 25
		        CALL drv:but_enable
		        drv:button = 26
		        CALL drv:but_enable
		        drv:button = 27
		        CALL drv:but_disable
		        drv:button = 28
		        CALL drv:but_disable
		        drv:button = 2
		        CALL drv:but_enable
			    nextfield post:adt_opcserv_valor
			    ;nextfield adt_opcserv_opci
			    drv:button = 3
			    CALL drv:but_enable
			    drv:button = drv:last_button
			    CALL drv:but_up_enable
		    END IF
		endif
		clearfield op:adt_temp_accion
	   return (-2)
    endif

    drv:save_button = drv:last_button
    IF (TESTFLAG(admin:mode_flags,update)) THEN
        CALL CDSopcserv_save
        CALL drv:side_bar_disable
        RESETFLAG admin:mode_flags,update
        ;SMC journalizo Modificacion
        call post:MISCJournalTablas
    ELSE
        IF (TESTFLAG(admin:mode_flags,delete)) THEN
            RESETFLAG admin:mode_flags,delete
            CALL lib:adt_delete_verify
            IF (RETVAL == 0) THEN
                CALL drv:side_bar_disable
                CALL CDSopcserv_del
                IF (RETVAL != 0) THEN
                    drv:button = drv:save_button
                    CALL drv:but_up_enable
                    RETURN (-1)
                ELSE
                    ;SMC journalizo Modificacion
                    call post:MISCJournalTablas
                    CALL CSR:proc_list(170,LST:LISTopcserv_flds)
                    CALL CSR:proc_list(190,LST:LISTopcserv_flds)
                    RETURN (-1)
                END IF
            END IF
        ELSE
            IF (TESTFLAG(admin:mode_flags,imprimir)) THEN
                RESETFLAG admin:mode_flags,imprimir


               /*  siaf:adt_tabla_context = DSC:adt_opcserv_context
                siaf:INDencab_lis      = OFB:MISCencab_opcserv
                siaf:INDsubencab_lis   = OFB:MISCsubenc_opcserv
                siaf:INDselect_tabla   = OFB:CDSopcXserv_sel
                siaf:INDpaso_str_tabla = OFB:MISClinea_opcXserv
                siaf:INDestado_clave   = OFB:MISCclave_opcXserv


                clearfield post:tipo_listado
                CALL post:adt_prt_verify
                IF (RETVAL == 0) THEN
                   CALL post:MISCprt_servxxx  //Flor
                END IF*/
                
                //Inicio gpb:AUT-2415 
                /*CALL MISCdumptable 
                 CALL CDSdumptable*/  
						    //resguardo los valores originales
						    LET l_tabla = admin:tabla 
						    LET l_INDCamposTablas = post:INDCamposTablas                 
                CALL MISCdumptableNew 
								admin:tabla = "OpcServ"
								post:INDCamposTablas = LST:post:LISTopcserv_flds
                CALL CDSdumptableNew  
                //recupero los valores originales
								LET admin:tabla = l_tabla
								LET post:INDCamposTablas = l_INDCamposTablas
                //Fin gpb:AUT-2415 
                
                CALL CSR:proc_list(170,LST:LISTopcserv_flds)
                CALL CSR:proc_list(190,LST:LISTopcserv_flds)
                RETURN (-1)
            END IF
        END IF
        RETURN (-1)
    END IF
    CALL CSR:proc_list(170,LST:LISTopcserv_flds)
    CALL CSR:proc_list(190,LST:LISTopcserv_flds)
    RETURN (-1)
END SUB

/*******/
