SUB post:drawDescuentoCMped
 	
	/*MFM - Tratamiento de Convenios*/
	SETFONT "Arial"
	SETFACE 0x0000 
	SETBCOLOR 0x17 
	DRAW  MLFIELD 241,151,141,16 10,8 tipo_DescuentoCM
	
;	IF (ConvenioProducto || ExcepProducto || (ConvenioSesion && !ConvenioSesionV)) THEN 
