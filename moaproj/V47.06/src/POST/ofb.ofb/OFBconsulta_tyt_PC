/****o* Consulta TrackAndTrace/OFB:post:OFBconsulta_tyt_PC
* NOMBRE
*   OFB:post:OFBconsulta_tyt_PC
* DESCRIPCION
*   Setea los datos necesarios para el envio de la consulta TrackAndTrace.
* ENTRADAS
*   Parámetros de entrada de la rutina, sean argumentos o campos que tiene en cuenta
* SALIDAS
*   Campos modificados como resultado o returns cuyos valores sean no triviales
* IMPACTOS
*   Otros objetos que deberán ser analizados al modificar el objeto actual
* REFERENCIADO POR
*   OFB:post:OFBconsPalClave
* DOCUMENTACION
*   ENTREGA ECOM CON PALABRA CLAVE
* SOURCE
*/
#include "postofb.ofb.h"

SUB post:OFBconsulta_tyt_PC

	LOCAL loc_msg1 LIKE lib:stat_msg_line

	SETFLAG giros:tran_send_mode,consulta_simple
	RESETFLAG giros:tran_send_mode,consulta_multiple

	CALL post:CDSobtiene_secuen("STAN")

	//TrackAndTrace PALABRA CLAVE
	giros:codigo_procesamiento = 100000
	giros:hora_viaje = common:time_of_day
	giros:dia_viaje = common:system_date

	hcomm:INDhost_sndrt = OFB:post:SENDconsulta_tyt_PC //OFB:post:SENDconsulta_tyt
	hcomm:INDhost_rcvrt = OFB:post:RCVEconsulta_tyt_PC //OFB:post:RCVEconsulta_tyt

	loc_msg1 = "Enviando Consulta."
	FPRINT loc_msg1 "%s [%s]",loc_msg1,post:tyt_ult_item 	

	lib:stat_msg_line = loc_msg1
	REFRESH lib:stat_msg_line
	
	CALL hcomm:COMM_stat_init 
	
	CALL giros:OFBdisable_bt_msg
	
	CALL hcomm:COMM_host_tran
    	
	common:trap_reset = OFB:drv:KEYSreset_esc
	CALL giros:OFBenable_bt_msg
	CLEARFIELD lib:stat_message
	CLEARFIELD lib:stat_msg_line
	REFRESH lib:stat_message
	REFRESH statusline
	REFRESH lib:stat_msg_line
	
	IF (hcomm:tran_status != HOST_ACCEPTED) THEN
		RETURN -2
	END IF

END SUB

/*******/
