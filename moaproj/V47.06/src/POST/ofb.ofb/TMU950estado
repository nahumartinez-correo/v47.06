/****o* Pendientes de agrupación/OFB:post:TMU950estado
* NOMBRE
*   OFB:post:TMU950estado
* DESCRIPCION
*   Comportamiento del objeto (obligatorio)
* ENTRADAS
*   Parámetros de entrada de la rutina, sean argumentos o campos que tiene en cuenta
* SALIDAS
*   Campos modificados como resultado o returns cuyos valores sean no triviales
* IMPACTOS
*   Otros objetos que deberán ser analizados al modificar el objeto actual
* REFERENCIADO POR
*   Objetos que llaman al objeto documentado (obligatorio)
* DOCUMENTACION
*   Documentación relevante que deberá ser actualizada por la modificación de la rutina
* SOURCE
*/
#include "postofb.ofb.h"

SUB post:TMU950estado
	LOCAL COMANDO LIKE drv:dis_info_work
   	LOCAL eodbytes LIKE drv:dis_info_work
   	LOCAL ESTADO LIKE common:IntFld
   	LOCAL EST LIKE common:IntFld
   	LOCAL ret LIKE common:IntFld

	CALL TMU950abrir_port
    	CALL TMU950setear_port

	COMANDO = "\x1d\x05"
	CALL CSR:wingsp(GSP_WRITE,COMANDO,2,fd)

	eodbytes = "^"
	CALL CSR:wingsp(GSP_GETC,ESTADO,fd)
	if (retval < 0)
		msgbox "La impresora está apagada",OFB_OK,"Aviso"
	 	CALL TMU950cerrar_port
		return -1
	end if

	ret = 0
	ESTADO = ESTADO & 0x6f
	EST = ESTADO & 0x01
	if (EST > 0)
		msgbox "Cambiar journal",OFB_OK,"Aviso"
		ret = -1
	end if
	EST = ESTADO & 0x02
	if (EST > 0)
		msgbox "Cambiar receipt",OFB_OK,"Aviso"
		ret = -1
	end if
	EST = ESTADO & 0x04
	if (EST > 0)
		msgbox "Impresora abierta",OFB_OK,"Aviso"
		ret = -1
	end if
	EST = ESTADO & 0x08
	if (EST > 0)
		msgbox "Fuera de línea",OFB_OK,"Aviso"
		ret = -1
	end if
	EST = ESTADO & 0x40
	if (EST > 0)
		msgbox "\tError \n\n¿Está prendida la impresora?",OFB_OK,"Aviso"
		ret = -1
	end if
	EST = ESTADO & 0x20
	if (EST == 0)
		msgbox "Hay un papel en la impresora\n\to\nla impresora está apagada",OFB_OK,"Aviso"
		ret = -1
	end if

 	CALL TMU950cerrar_port
	return ret
END SUB

/*******/
