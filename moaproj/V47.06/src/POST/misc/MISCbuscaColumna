/****o* Pendientes de agrupación/OFB:post:MISCbuscaColumna
* NOMBRE
*   OFB:post:MISCbuscaColumna
* DESCRIPCION
*   Comportamiento del objeto (obligatorio)
* ENTRADAS
*   Parámetros de entrada de la rutina, sean argumentos o campos que tiene en cuenta
* SALIDAS
*   Campos modificados como resultado o returns cuyos valores sean no triviales
* IMPACTOS
*   Otros objetos que deberán ser analizados al modificar el objeto actual
* REFERENCIADO POR
*   Objetos que llaman al objeto documentado (obligatorio)
* DOCUMENTACION
*   Documentación relevante que deberá ser actualizada por la modificación de la rutina
* SOURCE
*/
#include "postmisc.h"

SUB post:MISCbuscaColumna(campo)
    LOCAL LMetaData   LIKE common:csr_string_4096
    LOCAL L_item      LIKE siaf:idx
    LOCAL i			  LIKE siaf:i

	; busca la columna del archivo de entrada en la que está ese campo para informarlo en el log.

	L_item = PL_GETITEM
	i = 0
	; Ahora sí estoy en condiciones de validar
	CLEARFIELD LMetaData
	CALL csr:magic_myPickcontrol DSC:PickTabla_mdata LMetaData L_item
	WHILE (retval >= 0)
		; Cargo información de meta data para este campo en particular.
		CALL post:MISCcargaMdataCampo(LMetaData)

		if (adt_mdata_tipoProc != "C")
			i = i + 1
		endif

		if (post:adt_mdata_campo == campo)
			return i
		endif

		L_item = L_item + 1
		CLEARFIELD LMetaData
		CALL csr:magic_myPickcontrol DSC:PickTabla_mdata LMetaData L_item
    end while
END SUB

/*******/
