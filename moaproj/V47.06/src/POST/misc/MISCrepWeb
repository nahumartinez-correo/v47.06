/****h* MOSAIC/Caja Unificada/OFB:post:MISCrepWeb
* NOMBRE
*   OFB:post:MISCrepWeb
* DESCRIPCION
*   Reporte de Operaciones Web
* ENTRADAS
*   Parámetros de entrada de la rutina, sean argumentos o campos que tiene en cuenta
* SALIDAS
*   Campos modificados como resultado o returns cuyos valores sean no triviales
* IMPACTOS
*   Otros objetos que deberán ser analizados al modificar el objeto actual
* REFERENCIADO POR
*   post:SVALreporte_Web
* DOCUMENTACION
*   http://jira.sibs.net/jira/browse/AUT-1440
* SOURCE
*/
#include "postmisc.h"

SUB post:MISCrepWeb(p_fecha_Rweb)
    
    LOCAL link_num       LIKE siaf:i             //canal de comunicacion del archivo
    LOCAL file_name      LIKE common:csr_string  //nombre del archivo
    LOCAL f_rep          LIKE siaf:i             //si es > 0 entonces se imprimio por lo menos un reporte
    LOCAL l_out          LIKE common:csr_string  //tipo de salida
    LOCAL caracter       LIKE common:csr_string
    LOCAL caracter2      LIKE common:csr_string
    LOCAL l_fecha_Rweb   LIKE common:csr_string 

    LET l_fecha_Rweb = p_fecha_Rweb 
    f_rep = 0 
    l_out = siaf:pantalla_impreso
    siaf:listado_totmot = 1
    link_num = 4
    file_name = "RepWeb.lis"

    //abro el archivo
    CALL post:MISClst_RepWeb_open(file_name,link_num)
    
    //si no pudo abrir el archivo
    IF (RETVAL == -2) THEN
        RETURN RETVAL
    END IF
    //rutina que arma el encabezado del reporte
    CALL post:MISClst_RepWeb_enc
    CALL post:MISClst_RepWeb(link_num,siaf:pantalla_impreso,l_fecha_Rweb)

    IF (RETVAL == 0) THEN 
        f_rep = f_rep + 1
    END IF 
    IF (f_rep > 0) THEN
        CALL post:MISCImpVisorRepWeb(file_name,siaf:pantalla_impreso,link_num) 
    ELSE 
        CALL CSR:file_close(link_num)
        CALL giros:MISCdeleteFile(file_name)
    END IF
    
END SUB

/*******/
