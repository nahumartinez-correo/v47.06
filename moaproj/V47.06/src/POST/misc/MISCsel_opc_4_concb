/****o* Pendientes de agrupación/OFB:post:MISCsel_opc_4_concb
* NOMBRE
*   OFB:post:MISCsel_opc_4_concb
* DESCRIPCION
*   Comportamiento del objeto (obligatorio)
* ENTRADAS
*   Parámetros de entrada de la rutina, sean argumentos o campos que tiene en cuenta
* SALIDAS
*   Campos modificados como resultado o returns cuyos valores sean no triviales
* IMPACTOS
*   Otros objetos que deberán ser analizados al modificar el objeto actual
* REFERENCIADO POR
*   Objetos que llaman al objeto documentado (obligatorio)
* DOCUMENTACION
*   Documentación relevante que deberá ser actualizada por la modificación de la rutina
* SOURCE
*/
#include "postmisc.h"

SUB post:MISCsel_opc_4_concb
    IF (post:OpcInd_vec[4].NUMCHARS != 0 && !TESTFLAG(lib:state_flags,scan_mode)) THEN
    	common:csr_string = SUBSTR(post:OpcInd_vec[4],0,4)
      	IF (TESTFLAG(post:OpcInd_check,item_4)) THEN
        	IF (post:cant_opc > 5) THEN
        		RESETFLAG post:OpcInd_check,item_4
        		ALTERCONTROLSET post:check_indic_4
        		MSGBOX "NO SE PUEDEN SELECCIONAR MAS DE 6 OPCIONALES",0x00,"ERROR"
        		RETURN
        	END IF
        	post:cant_opc = post:cant_opc + 1
    	    FPRINT post:opc_concb_string,"%-4.4s",SUBSTR(OpcInd_vec[4],0,4)
        	CALL CSR:f_saaddpl(DSC:post:OpcInd_sel,post:opc_concb_string)
    	ELSE
        	common:csr_string = post:OpcInd_vec[4]
        	CALL post:MISCborra_opc_concb
        	post:cant_opc = post:cant_opc - 1
    	END IF
    	REFRESH post:cant_opc
    ELSE
    	IF (TESTFLAG(post:OpcInd_check,item_4)) THEN
	        RESETFLAG post:OpcInd_check,item_4
    	ELSE
        	SETFLAG post:OpcInd_check,item_4
		END IF
      	ALTERCONTROLSET post:check_indic_4
    END IF
END SUB

/*******/
