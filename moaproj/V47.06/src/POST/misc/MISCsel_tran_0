/****o* Pendientes de agrupación/OFB:post:MISCsel_tran_0
* NOMBRE
*   OFB:post:MISCsel_tran_0
* DESCRIPCION
*   Comportamiento del objeto (obligatorio)
* ENTRADAS
*   Parámetros de entrada de la rutina, sean argumentos o campos que tiene en cuenta
* SALIDAS
*   Campos modificados como resultado o returns cuyos valores sean no triviales
* IMPACTOS
*   Otros objetos que deberán ser analizados al modificar el objeto actual
* REFERENCIADO POR
*   Objetos que llaman al objeto documentado (obligatorio)
* DOCUMENTACION
*   Documentación relevante que deberá ser actualizada por la modificación de la rutina
* SOURCE
*/
#include "postmisc.h"

SUB post:MISCsel_tran_0
    local loc_pos like siaf:i
    local l_SelTodo   like post:SiNo_aux		
    
	call MISCsel_tran(0, l_SelTodo)
	if ( l_SelTodo == "S" ) /*Se intento seleccionar todo ... no hay mas que hacer*/
	    return
	endif
	if (!testflag(lib:state_flags,scan_mode)) then

		loc_pos = 0
		idx = PL_GETITEM + 0
	    call csr:myPickcontrol(dsc:PICanulacion_tran,common:csr_string,idx)
	    WHILE (!(retval < 0))
	        /*Busco el item del picklist corrspondiente al tlr_jnl_sequence del journal*/
	        if (TranAnul_vec[0][1] == substr(common:csr_string,61,4))	        

	            fprint common:csr_string "%s"  substr(common:csr_string,66,5)	
		        call csr:trimfield(common:csr_string)
		        /*Si esta agrupado (tema bienes de cambio ej.encomienda Correo Plus ) o es un combo*/
		        if (common:csr_string > 0 || TranAnul_vec[0][14] > 0) 	
	                /*marco o desmarco a todas las transacciones con igual codigo de agrupacion*/
		            CALL post:MISCsel_tran_agrup(common:csr_string,0)
		            return 0
		        else
		        	//Si la posicion correspondiente al campo post:PreDNroTrnAsoc no es vacio,
					// entonces tengo que marcar/desmarcar todas las tx con el mismo nro PreDNroTrnAsoc para que las reverse!!!
					if (TranAnul_vec[0][12] != 0) then
						call MISCselectTxDcto(TranAnul_vec[0][12],0)
						return 0
					endif
		        end if            
	        end if
	        
	        loc_pos = loc_pos + 1            
			idx = PL_GETITEM + loc_pos
			call csr:myPickcontrol(dsc:PICanulacion_tran,common:csr_string,idx)    
	    End While
	end if
	
END SUB

/*******/
