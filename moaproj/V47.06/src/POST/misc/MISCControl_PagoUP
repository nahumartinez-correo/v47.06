/****o* Pendientes de agrupación/OFB:post:MISCControl_PagoUP
* NOMBRE
*   OFB:post:MISCControl_PagoUP
* DESCRIPCION
*   Comportamiento del objeto (obligatorio)
* ENTRADAS
*   Parámetros de entrada de la rutina, sean argumentos o campos que tiene en cuenta
* SALIDAS
*   Campos modificados como resultado o returns cuyos valores sean no triviales
* IMPACTOS
*   Otros objetos que deberán ser analizados al modificar el objeto actual
* REFERENCIADO POR
*   Objetos que llaman al objeto documentado (obligatorio)
* DOCUMENTACION
*   SC50200.doc:http://livelink.intranet.siemens-itron.com.ar/livelink/livelink.exe?func=doc.ViewDoc&nodeId=619906&
* SOURCE
*/
#include "postmisc.h"

SUB post:MISCControl_PagoUP

    LOCAL monto_aux LIKE siaf:importe

    //cgw:SC 50170
    LOCAL l_importe LIKE post:importe_sesion

	If (LASTKEY == RT_ESC) Then
    	let drv:button = TFB11
        CALL drv:but_up_enable
        call drv:but_enable	
        RETURN -2
    End If
    
 IF (monto_chk_dif > 0) THEN
    //Verifico que el monto del cheque diferido no supere el importe total de la sesión (con intereses e impuestos) 

	INIT 22,1		 
    //cgw:SC 50170 (Redondea a dos decimales)
	l_importe = post:importe
	INIT 22,0

	If (post:monto_chk_dif > l_importe) Then
		MSGBOX "El monto a pagar con cheque diferido supera el importe total de la sesión",0x00,"ERROR"
		CALL MISCreversarInteres
        RETURN -2
    End If
	//Verifico que si estoy en una excepcion de multiples cheques los intereses cargados por el rsc sean correctos    
    if (consulta_excepcionCM == "S" && interesOK == "N") then
    	MSGBOX "El monto declarado de intereses es mayor al monto calculado por el host.",0x00,"ERROR"
		CALL MISCreversarInteres
        RETURN -2
    end if

    //(08.05.2002)Controlar que el importe esté entre el minimo y el maximo permitido para cheque diferido
    
    Call post:CDSadt_MedPago_load
	if (retval == 0) then
		If (adt_mp_min > post:monto_chk_dif || post:monto_chk_dif > adt_mp_max)
			FPRINT common:csr_string_130, "El importe de este medio pago no está entre el minimo ($ %e) y el maximo ($ %e) permitido",adt_mp_min, adt_mp_max
			MSGBOX common:csr_string_130,0x00,"Mensaje"
			CALL MISCreversarInteres
			Return -2
		end if
	end if
	
    If (consulta_excepcion == "S") Then
    	//tengo que controlar que el importe que ingresó no supere el monto de la venta por excepcion (menos la bonificacion) mas
    	//los impuestos e intereses
    	monto_aux = post:excep_venta - monto_bonif + monto_impuestos
    	If (post:monto_chk_dif > monto_aux && (!TESTFLAG (cheque_dif, chq_dif_al_dia))) Then
    		//MSGBOX "El monto a pagar con cheque diferido supera el importe acordado de venta más impuestos",0x00,"ERROR"
			FPRINT common:csr_string_130, "El monto a pagar con cheque diferido supera el importe acordado de venta más impuestos\nMonto máximo permitido:  $ %e",monto_aux
			MSGBOX common:csr_string_130,0x00,"Mensaje"
			CALL MISCreversarInteres
			RETURN -2
        End If
    Else
    	
    	if (cli_tipo == CLIUP) then //si es cliente medio no tengo que control limite ya que no tiene!!
	    	//(04.04.2002)Controlar que el importe que ingresó no supere el saldo disponible mas
    		//los impuestos
    		monto_aux = post:limite_up + monto_impuestos
    		;SC50200 se pregunta por el flag chq_dif_al_dia
	    	if ((monto_chk_dif > monto_aux) && (!TESTFLAG (cheque_dif, chq_dif_al_dia))) Then
    			FPRINT common:csr_string_130, "El monto a pagar con cheque diferido supera el saldo disponible más impuestos\nMonto máximo permitido:  $ %e",monto_aux
				MSGBOX common:csr_string_130,0x00,"Mensaje"
				CALL MISCreversarInteres
				RETURN -2
    	    End If
        end if
        //(08.05.2002)Controlar que no supere el monto habilitado a pagar con cheque diferido mas impuestos
        monto_aux = post:importe_display2 + monto_impuestos
        if (monto_chk_dif > monto_aux) Then
        	FPRINT common:csr_string_130, "El monto a pagar con cheque diferido supera el monto permitido más impuestos\nMonto máximo permitido:  $ %e",monto_aux
			MSGBOX common:csr_string_130,0x00,"Mensaje"
			CALL MISCreversarInteres
			RETURN -2
        endif
     End If
     
  END IF 
END SUB

/*******/
