/****o* Pendientes de agrupación/OFB:post:MISCsel_tran
* NOMBRE
*   OFB:post:MISCsel_tran
* DESCRIPCION
*   Comportamiento del objeto (obligatorio)
* ENTRADAS
*   Parámetros de entrada de la rutina, sean argumentos o campos que tiene en cuenta
* SALIDAS
*   Campos modificados como resultado o returns cuyos valores sean no triviales
* IMPACTOS
*   Otros objetos que deberán ser analizados al modificar el objeto actual
* REFERENCIADO POR
*   Objetos que llaman al objeto documentado (obligatorio)
* DOCUMENTACION
*   Documentación relevante que deberá ser actualizada por la modificación de la rutina
* SOURCE
*/
#include "postmisc.h"

SUB post:MISCsel_tran(pos, prmSelTodo)

	//MFM - Si es una Venta Diferida deberá anularse la sesion completa.
	//MFM - Si se usó una Excepción por Producto o Sesion se fuerza una anulación total ya que tengo que desmarcar
	//la excepción como usada.
	//MFM - Si se consumió el anticipo se fuerza a marcar todas las tx.
	
	prmSelTodo = "N" /*Indica si trato de seleccionar todo*/
	
	IF (post:VentaUP_Diferida == "S" || ConvenioSesion || ExcepSesion || ExcepProducto || \
		ModalidadCC || ModalidadCD || ConsumoAnticipo || OperacionCob || OperacionAut  || \
		TESTFLAG(MPcheque,MPpago_cheque)) THEN

		CALL post:MISCestado_tran(pos)
		IF (RETVAL == 0)
			CALL PBMarcaTodasTran
			prmSelTodo = "S"
		ELSE
			CALL PBDesmarcaTodasTran
		END IF
		RETURN (0)
	END IF
	CALL post:MISCtratEspTelMulAnu(pos)
	if (retval == -2)
		return 0
	end if
    CALL post:MISCSelecDeselec(pos, 2)
    ;CALL CSR:f_sadopl(dsc:PICtran_sel,common:csr_string)
END SUB

/*******/
