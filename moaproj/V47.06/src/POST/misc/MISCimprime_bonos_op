/****o* Pendientes de agrupación/OFB:post:MISCimprime_bonos_op
* NOMBRE
*   OFB:post:MISCimprime_bonos_op
* DESCRIPCION
*   Comportamiento del objeto (obligatorio)
* ENTRADAS
*   Parámetros de entrada de la rutina, sean argumentos o campos que tiene en cuenta
* SALIDAS
*   Campos modificados como resultado o returns cuyos valores sean no triviales
* IMPACTOS
*   Otros objetos que deberán ser analizados al modificar el objeto actual
* REFERENCIADO POR
*   Objetos que llaman al objeto documentado (obligatorio)
* DOCUMENTACION
*   Documentación relevante que deberá ser actualizada por la modificación de la rutina
* SOURCE
*/
#include "postmisc.h"

SUB post:MISCimprime_bonos_op

	local importe_total     like siaf:importe
	local varl_retval       like lib:err_retval
	local varl_mp_bonos     like post:totales_mp_sf1
	local varl_mp_bonos_ant like post:totales_mp_sf1
	local varl_mp_desc      like post:adt_mp_desc
	local varl_mp_desc_ant  like post:adt_mp_desc
	local varl_importe      like siaf:importe

	;Ordenar picklist por MED.PAGO
	;Solo se han agregado al picklist las operaciones de 1 solo operador
	call csr:PickOp 4 DSC:post:opera_mp_bonos "15,2"

	fprint common:csr_string " %s","TOTALES POR BONOS"
       	call post:MISCimprime_linea(common:csr_string)

	clearfield importe_total
	clearfield giros:item_picklist

	let giros:numero_item = 0
	move DSC:post:opera_mp_bonos to fld:giros:nombre_picklist

	// EXTRACT DE PICK DE DATOS DE GIROS.
	call giros:OFBpicklist_item
	varl_retval = retval
	if ( varl_retval < 0 )
		return -2
	end if

	varl_mp_bonos = substr(giros:item_picklist,14,2)
	varl_mp_desc  = substr(giros:item_picklist,16,30)
	varl_importe  = substr(giros:item_picklist,46,13)

	WHILE (varl_retval == 0)

		varl_mp_bonos_ant = varl_mp_bonos

		WHILE ( varl_retval == 0 && \
			varl_mp_bonos == varl_mp_bonos_ant)

			importe_total = importe_total + varl_importe
			varl_mp_desc_ant  = varl_mp_desc

			giros:numero_item = giros:numero_item  + 1
			// EXTRACT DE PICK DE DATOS DE GIROS.
			call giros:OFBpicklist_item
			varl_retval = retval
			if (  varl_retval < 0 )
				break
			end if

			varl_mp_bonos = substr(giros:item_picklist,14,2)
			varl_mp_desc = substr(giros:item_picklist,16,30)
			varl_importe = substr(giros:item_picklist,46,13)
				
		END WHILE
				
		// Impresion de linea de medio de pago bonos
		fprint common:csr_string,\
		" %-30.30e                     %16.16e",\
		varl_mp_desc_ant,importe_total
		call post:MISCimprime_linea(common:csr_string)

	
		// Agregar al picklist de totales generales
		fprint siaf:nota_1,"%2.2e%-30.30e%13.13s",\
		varl_mp_bonos_ant,varl_mp_desc_ant,importe_total

		call CSR:f_saaddpl(DSC:post:total_mp_bonos,\
		siaf:nota_1)
		clearfield siaf:nota_1
		clearfield importe_total
		clearfield common:csr_string

	END WHILE

	call CSR:f_sadroppl(DSC:post:opera_mp_bonos)
    	call CSR:f_sanewpl(DSC:opera_mp_bonos,PIC:opera_mp_bonos)

END SUB

/*******/
