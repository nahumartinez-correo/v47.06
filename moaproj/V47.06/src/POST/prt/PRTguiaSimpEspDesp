/****o* Pendientes de agrupación/OFB:post:PRTguiaSimpEspDesp
* NOMBRE
*   OFB:post:PRTguiaSimpEspDesp
* DESCRIPCION
*   Comportamiento del objeto (obligatorio)
* ENTRADAS
*   Parámetros de entrada de la rutina, sean argumentos o campos que tiene en cuenta
* SALIDAS
*   Campos modificados como resultado o returns cuyos valores sean no triviales
* IMPACTOS
*   Otros objetos que deberán ser analizados al modificar el objeto actual
* REFERENCIADO POR
*   Objetos que llaman al objeto documentado (obligatorio)
* DOCUMENTACION
*   Documentación relevante que deberá ser actualizada por la modificación de la rutina
* SOURCE
*/
#include "postprt.h"

SUB post:PRTguiaSimpEspDesp
	LOCAL cant LIKE j_idx
	LOCAL pagina LIKE j_idx
	LOCAL busqueda LIKE j_idx
	LOCAL codsiaf LIKE siaf:jnl_codigo_siaf
	LOCAL TT LIKE idx
	//LOCAL CantContFin LIKE j_idx
	LOCAL CantPzasFin LIKE j_idx
	//LOCAL CantSacasFin LIKE j_idx
	LOCAL indice LIKE j_idx
    
  CLEARFIELD LineaImpresion
    
	//LET CantContFin = 0
	LET CantPzasFin = 0
	//LET CantSacasFin = 0
	LET indice = 0 /* Cant. de Piezas en una linea */
	LET j_idx = 0 /* contado de detalle */
	LET cant = 1 /* contador de lineas */
	LET pagina = 1 /* contador de pags. */
	LET busqueda = 1
    
	/* Con este select se buscan aquellas piezas que van directamente */
	/* al corte de linea, sin pasar por contenedor ni saca y que son
	simple especial*/
	CDS SELECT FROM DSC:post:DetTmp BECOMES DSC:post:DetTmp_ctx WHERE \
		(op:op_operator_id == op:op_operator_id && \
		siaf:jnl_codigo_siaf != "99030" && \
		siaf:jnl_codigo_siaf != "99040" && \
		siaf:jnl_codigo_siaf != "99140" && \
		siaf:jnl_codigo_siaf != "99065" && \
		jnl_simp_esp == "S") SORT DSC:post:SortDesp

  CDS FINDFIRST DSC:DetTmp_ctx LOCK
  lET lib:err_retval = CDSRETVAL
  IF (lib:err_retval < 0) THEN
    busqueda = 0
  END IF
    
	IF (busqueda == 1) THEN
		CDS EXTRACT DSC:DetTmp_ctx ALL
		DO
			IF (MarcaBorrado == "*")
				CDS FINDNEXT DSC:DetTmp_ctx LOCK
				LET lib:err_retval = CDSRETVAL
				IF (lib:err_retval < 0) THEN
					busqueda = 0
					BREAK
				END IF
				CDS EXTRACT DSC:DetTmp_ctx ALL
			ELSE
				BREAK
			END IF
		LOOP
	END IF
	
	IF (busqueda == 1) THEN
		CALL PRThdrDespacho("Simp")
		PRT PRINT EDIT post:LineaImpresion
		PRT NEWLINE
		PRT CARRIAGERETURN
		cant = cant + 1
		DO
			CLEARFIELD LineaImpresion
			DO
				IF ((LineaImpresion.NUMCHARS + Pieza_id.NUMCHARS) <= 96) THEN
					IF (indice == 0) THEN
						FPRINT LineaImpresion "   % s" Pieza_id
					ELSE
						FPRINT LineaImpresion "%s      % s" \
							LineaImpresion, Pieza_id
					END IF
				ELSE
					BREAK
				END IF
				indice = indice + 1
				LET j_idx = j_idx + 1
				CDS FINDNEXT DSC:DetTmp_ctx LOCK
				LET lib:err_retval = CDSRETVAL
				IF (lib:err_retval >= 0) then
					CDS EXTRACT DSC:DetTmp_ctx ALL
					DO
						IF (MarcaBorrado == "*") THEN
							CDS FINDNEXT DSC:DetTmp_ctx LOCK
							LET lib:err_retval = CDSRETVAL
							IF (lib:err_retval < 0) then
								BREAK
							END IF
							CDS EXTRACT DSC:DetTmp_ctx ALL
						ELSE
							BREAK
						END IF
					LOOP
				END IF
				IF (lib:err_retval < 0) THEN
					BREAK
				END IF
			LOOP
			/* Resguardo la linea a imprimir */
			SWAPDUP LineaImpresion
			IF ((cant + 5) >= 35) THEN
				DO
					IF (cant == 35) THEN
						BREAK
					END IF
					PRT NEWLINE
					PRT CARRIAGERETURN
					LET cant = cant + 1
				LOOP
				FPRINT LineaImpresion \
					"                                                                                 Página: %03.3d" \
					pagina
	                    
				PRT PRINT EDIT post:LineaImpresion
				PRT NEWLINE
				PRT CARRIAGERETURN
	                
				LET pagina = pagina + 1
				  
				PRT FLUSH
				PRT FORMFEED
	                
				CALL PRThdrDespacho("Simp")
				LET cant = 1
				CLEARFIELD LineaImpresion
				PRT NEWLINE
				PRT CARRIAGERETURN
				cant = cant + 1
			END IF
			DUPFIELD LineaImpresion
			PRT PRINT EDIT post:LineaImpresion
			PRT NEWLINE
			PRT CARRIAGERETURN
			cant = cant + 1
			LET indice = 0 /* Cant. Pzas. por Linea */
			CLEARFIELD LineaImpresion
			IF (lib:err_retval < 0) THEN
				PRT  NEWLINE
				PRT  CARRIAGERETURN
				CLEARFIELD LineaImpresion
				cant = cant + 1
				
				FPRINT LineaImpresion "                                        %31.31s %5.5d" \
					"Total de Piezas:" \
					post:j_idx
				
				LET CantPzasFin = j_idx
				PRT PRINT EDIT post:LineaImpresion
				PRT NEWLINE
				PRT CARRIAGERETURN
				cant = cant + 1
				PRT NEWLINE
				PRT CARRIAGERETURN
				cant = cant + 1
				BREAK
			END IF
		LOOP
	END IF
    
	DO
		IF (cant >= 27) THEN
			BREAK
		END IF
		PRT NEWLINE
		PRT CARRIAGERETURN
		LET cant = cant + 1
	LOOP
    
  PRT PRINT EDIT post:leyenda
  PRT NEWLINE
  PRT CARRIAGERETURN
  LET cant = cant + 1
    
	FPRINT LineaImpresion "       "
	PRT PRINT EDIT post:LineaImpresion
	PRT NEWLINE
	PRT CARRIAGERETURN
	LET cant = cant + 1
	
	FPRINT LineaImpresion "                                   %031.31s %5.5d - %-8.8s" \
		"Total de Piezas que se remiten:" \
		CantPzasFin \
		op:op_login_id
	    
	PRT PRINT EDIT post:LineaImpresion 
	PRT NEWLINE
	PRT CARRIAGERETURN
	cant = cant + 1

	PRT NEWLINE
	PRT CARRIAGERETURN
	cant = cant + 1
    
	CLEARFIELD LineaImpresion
	LET LineaImpresion = "       Despachado por:                               Fecha:                                        Hora:"
	PRT PRINT EDIT post:LineaImpresion
	PRT NEWLINE
	PRT CARRIAGERETURN
	LET cant = cant + 1
	CLEARFIELD LineaImpresion
	LET LineaImpresion = "       Recibido por:                                     Fecha:                                        Hora:"
	PRT PRINT EDIT post:LineaImpresion
	PRT NEWLINE
	PRT CARRIAGERETURN
	LET cant = cant + 1

	CLEARFIELD LineaImpresion
	;LineaImpresion = itemcheck
	//FPRINT LineaImpresion "%06.6x" itemcheck
	
	PRT PRINT EDIT post:LineaImpresion
	PRT NEWLINE
	PRT CARRIAGERETURN
	LET cant = cant + 1
    
	PRT NEWLINE
	PRT CARRIAGERETURN
	LET cant = cant + 1
    
	FPRINT LineaImpresion "                         %052.52s" \
		"Espacio reservado para intercalación Legajo archivo."
	    
	PRT PRINT EDIT post:LineaImpresion
	PRT NEWLINE
	PRT CARRIAGERETURN
	PRT NEWLINE
	PRT CARRIAGERETURN
	
	FPRINT LineaImpresion \
		"                                                                                 Página: %03.3d" \
		pagina
	
	PRT PRINT EDIT post:LineaImpresion
	PRT NEWLINE
	PRT CARRIAGERETURN
    
END SUB

/*******/
