/****o* Pendientes de agrupación/OFB:post:PRTguiaSimpEspCont
* NOMBRE
*   OFB:post:PRTguiaSimpEspCont
* DESCRIPCION
*   Comportamiento del objeto (obligatorio)
* ENTRADAS
*   Parámetros de entrada de la rutina, sean argumentos o campos que tiene en cuenta
* SALIDAS
*   Campos modificados como resultado o returns cuyos valores sean no triviales
* IMPACTOS
*   Otros objetos que deberán ser analizados al modificar el objeto actual
* REFERENCIADO POR
*   Objetos que llaman al objeto documentado (obligatorio)
* DOCUMENTACION
*   Documentación relevante que deberá ser actualizada por la modificación de la rutina
* SOURCE
*/
#include "postprt.h"

SUB post:PRTguiaSimpEspCont
    /*Imprime la guia de Detalle de Simples Especiales*/
    LOCAL cant LIKE j_idx
    LOCAL pagina LIKE j_idx
    LOCAL primera_vez LIKE j_idx
    LOCAL indice LIKE j_idx
    LOCAL corte LIKE adt_corteop_cod

    /* Resguardo campos */
    swapdup siaf:jnl_codigo_siaf
    dupfield siaf:jnl_codigo_siaf
    
    CALL PRThdrContGeneFra("Simp")
    Let cant = 1 /* contador de lineas */

    LET orden = 1
    Let j_idx = 0 /* cont. de piezas por corte */
    Let idx = 0 /* cont. de piezas totales */
    Let pagina = 1 /* contador de pags. */
    Let corte = "" /* Resguarda el cod. de corte op. */
    let indice = 0 /* cont. de T&T en una linea */


    CDS SELECT FROM DSC:post:DetTmp BECOMES DSC:post:DetTmp_ctx WHERE \
      (op:op_operator_id == op:op_operator_id && \
      jnl_simp_esp == "S") SORT DSC:post:SortCont

    CDS FINDFIRST DSC:DetTmp_ctx LOCK
    lET lib:err_retval = CDSRETVAL

    IF (lib:err_retval < 0) then
	    RETURN (-2)
                                               END IF
    CDS EXTRACT DSC:DetTmp_ctx ALL
    DO
	    IF (MarcaBorrado == "*")
		    CDS FINDNEXT DSC:DetTmp_ctx LOCK
		    LET lib:err_retval = CDSRETVAL
		    IF (lib:err_retval < 0) then
			    RETURN (-2)
		    END IF
		    CDS EXTRACT DSC:DetTmp_ctx ALL
	    ELSE
		    BREAK
	    END IF
    LOOP

    LET corte = post:jnl_corteop_cod

    CALL CDSdescripCorteOp
    

    clearfield LineaImpresion
    LET LineaImpresion = adt_corteop_desc

    PRT  PRINT EDIT post:LineaImpresion
    PRT  NEWLINE
    PRT  CARRIAGERETURN
    cant = cant + 1
    
    PRT  NEWLINE
    PRT  CARRIAGERETURN
    cant = cant + 1
    
    DO
	    DO
    	    call csr:trimfield(Pieza_id)
	        IF ((LineaImpresion.NUMCHARS + Pieza_id.NUMCHARS) > 96)
		        PRT  PRINT EDIT post:LineaImpresion
		        PRT  NEWLINE
		        PRT  CARRIAGERETURN
		        clearfield LineaImpresion
		        indice = 0
		        cant = cant + 1
                
		        IF ((cant + 10) > 50)
			        DO
				        if (cant == 50)
					        break
				        end if
				        PRT  NEWLINE
				        PRT  CARRIAGERETURN
				        LET cant = cant + 1
			        LOOP
			        fprint LineaImpresion \
				        "                                                                                 Página: %03.3d" \
				        pagina
			        PRT  PRINT EDIT post:LineaImpresion
			        PRT  NEWLINE
			        PRT  CARRIAGERETURN
			        Let pagina = pagina + 1
			        PRT FLUSH
			        PRT FORMFEED
                    			    
			        CALL PRThdrContGeneFra("Simp")
                    			    
			        //call PRThdrContGeneFra
			        Let cant = 1
			        clearfield LineaImpresion
			        LET LineaImpresion = adt_corteop_desc
                    
			        PRT  PRINT EDIT post:LineaImpresion
			        PRT  NEWLINE
			        PRT  CARRIAGERETURN
			        cant = cant + 1
                    
			        PRT  NEWLINE
			        PRT  CARRIAGERETURN
			        cant = cant + 1
                    
		        END IF
            END IF
	        IF (indice == 0)
	            FPRINT LineaImpresion "       % s" Pieza_id
	        ELSE
		        FPRINT LineaImpresion "%s   % s" \
				LineaImpresion, Pieza_id
	        END IF
	        LET indice = indice + 1
	        j_idx = j_idx + 1
	        DO
		        CDS FINDNEXT DSC:DetTmp_ctx LOCK
		        LET lib:err_retval = CDSRETVAL
		        IF (lib:err_retval < 0) then
			        BREAK
		        END IF
		        CDS EXTRACT DSC:DetTmp_ctx ALL
		        IF (MarcaBorrado != "*")
			        BREAK
		        END IF
	        LOOP
	        IF (lib:err_retval < 0 || corte != jnl_corteop_cod)
                IF (indice > 0)
			        PRT  PRINT EDIT post:LineaImpresion
			        PRT  NEWLINE
			        LET cant = cant + 1
		        END IF
		        CLEARFIELD LineaImpresion
		        FPRINT LineaImpresion "                                        %015.15s %05.5s - %3d" \
			        "Cant. de Pzas: " \
			        corte \
			        j_idx
		        PRT  PRINT EDIT post:LineaImpresion
		        PRT  NEWLINE
		        LET cant = cant + 1
		        idx = idx + j_idx
		        j_idx = 0
		        CLEARFIELD LineaImpresion
		        BREAK
	        END IF
	    LOOP
	    IF (lib:err_retval < 0)
		    BREAK
	    END IF
	    LET corte = post:jnl_corteop_cod
        
        CALL CDSdescripCorteOp
	    
        //	CALL CDSdescripCorteOp
        
    	CLEARFIELD LineaImpresion
	    LET LineaImpresion = adt_corteop_desc
        
	    PRT  PRINT EDIT post:LineaImpresion
	    PRT  NEWLINE
	    PRT  CARRIAGERETURN
	    cant = cant + 1
	    CLEARFIELD LineaImpresion
	    LET indice = 0
        
	    PRT  NEWLINE
	    PRT  CARRIAGERETURN
	    cant = cant + 1
    LOOP

    CDS UNLOCK DSC:post:DetTmp_ctx
    CDS ENDSELECT DSC:post:DetTmp_ctx
    
    PRT  NEWLINE
    PRT  CARRIAGERETURN
    LET cant = cant + 1
    
    DO
	    IF (cant >= 42)
		    BREAK
	    END IF
	    PRT  NEWLINE
	    PRT  CARRIAGERETURN
	    LET cant = cant + 1
    LOOP
    
    /* Linea modif. por el Correo Arg. - Jul.´98 */
    CLEARFIELD LineaImpresion
    FPRINT LineaImpresion "                       %031.31s %5.5d - %09.9s %-8.8s" \
	    "Total de piezas que se remiten:" \
	    idx \
	    "Operador:" \
	    op:op_login_id
    PRT  PRINT EDIT post:LineaImpresion
    PRT  NEWLINE
    PRT  CARRIAGERETURN
    LET cant = cant + 1
    
    /* Rutina que calcula el CheckSum de todos los T&T que contiene el contenedor */
    CLEARFIELD LineaImpresion
    
    PRT  PRINT EDIT post:LineaImpresion
    PRT  NEWLINE
    PRT  CARRIAGERETURN
    LET cant = cant + 1
    
    FPRINT LineaImpresion "                         %052.52s" \
	    "Espacio reservado para intercalación Legajo archivo."
    PRT  PRINT EDIT post:LineaImpresion
    
    PRT  NEWLINE    
    PRT  CARRIAGERETURN
    
    PRT  NEWLINE
    PRT  CARRIAGERETURN
    
    FPRINT LineaImpresion \
	    "                                                                                 Página: %03.3d" \
	    pagina
    PRT  PRINT EDIT post:LineaImpresion
    PRT  NEWLINE
    PRT  CARRIAGERETURN
    PRT  NEWLINE
    
    /* Recupero campos */
    DUPFIELD siaf:jnl_codigo_siaf
    
END SUB

/*******/
