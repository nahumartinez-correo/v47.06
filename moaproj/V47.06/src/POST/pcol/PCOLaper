/****o* Pendientes de agrupación/OFB:post:PCOLaper
* NOMBRE
*   OFB:post:PCOLaper
* DESCRIPCION
*   Comportamiento del objeto (obligatorio)
* ENTRADAS
*   Parámetros de entrada de la rutina, sean argumentos o campos que tiene en cuenta
* SALIDAS
*   Campos modificados como resultado o returns cuyos valores sean no triviales
* IMPACTOS
*   Otros objetos que deberán ser analizados al modificar el objeto actual
* REFERENCIADO POR
*   Objetos que llaman al objeto documentado (obligatorio)
* DOCUMENTACION
*   Documentación relevante que deberá ser actualizada por la modificación de la rutina
* SOURCE
*/
#include "postpcol.h"

SUB post:PCOLaper
    IF (op:Flag_temp == 1) THEN
        CALL post:CDSsel_temporal
                IF (RETVAL == 0) THEN
			        IF (TESTFLAG(op:adt_temp_flag,update)) THEN
			            CALL csr:proc_list(F_REFRESH,LST:LISTapertura_flds)
			            CALL post:MISCset_sidebar(1,0,0,0)
			            CALL CSR:proc_list(F_SETVALDONE,LST:LISTapertura_flds)
			            CALL post:MISCResaltarCampos ("Apertura")
			            CALL CSR:proc_list(F_REFRESH,LST:LISTapertura_flds)
			        END IF
			        IF (TESTFLAG(op:adt_temp_flag,delete)) THEN
			            CALL csr:proc_list(F_REFRESH,LST:LISTapertura_flds)
			            CALL post:MISCset_sidebar(0,1,0,0)
			            CALL CSR:proc_list(F_SETVALDONE,LST:LISTapertura_flds)
			            CALL post:MISCResaltarCampos ("Apertura")
			            CALL CSR:proc_list(F_REFRESH,LST:LISTapertura_flds)
			        END IF
        		END IF
    ELSE
			        IF (adt_apertura_cod.NUMCHARS == 0) THEN
			            CALL post:MISCset_sidebar(0,0,0,1)
			        END IF
    END IF
END SUB

/*******/
