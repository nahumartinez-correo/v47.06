/****o* Pendientes de agrupación/OFB:post:PRES99460
* NOMBRE
*   OFB:post:PRES99460
* DESCRIPCION
*   Comportamiento del objeto (obligatorio)
* ENTRADAS
*   Parámetros de entrada de la rutina, sean argumentos o campos que tiene en cuenta
* SALIDAS
*   Campos modificados como resultado o returns cuyos valores sean no triviales
* IMPACTOS
*   Otros objetos que deberán ser analizados al modificar el objeto actual
* REFERENCIADO POR
*   Objetos que llaman al objeto documentado (obligatorio)
* DOCUMENTACION
*   Documentación relevante que deberá ser actualizada por la modificación de la rutina
* SOURCE
*/
#include "postpres.h"

SUB post:PRES99460


	siaf:codigo_siaf =  99460
	siaf:moneda = "99"
	
	IF (post:estado_presu != 2 && post:estado_presu != 3 && post:estado_presu != 4)
	    errmsg common:errmsg_list,"Inicie una Sesión con Cliente Medio para realizar una Cobranza."
	    return (-2)
    END IF
    	   
	//Validaciones
	if (post:estado_presu != 4) then
	
	if (post:consulta_excepcionCM == "S")
	    errmsg common:errmsg_list,"Ud.se encuentra en una venta por excepción.\nNo podrá realizar la Cobranza."
	    return (-2)
	endif 
	  
    IF (post:cli_tipo != CLIMED)
	    errmsg common:errmsg_list,"El cliente no está habilitado para realizar una Cobranza."
	    return (-2)
    END IF
    
    IF (post:consulta_ordenCM == "S") THEN
    	errmsg common:errmsg_list,"Ud.se encuentra en una venta por orden de compra.\nNo podrá realizar la Cobranza."
	    return (-2)
    END IF
    
    CALL post:CDSServicio_99460
	IF (RETVAL < 0) THEN
	    return (-2)
	END IF
	
    IF (ExcepSinLinea) THEN
	    errmsg common:errmsg_list,"La sesión se ha iniciado fuera de línea.\nPara realizar una Cobranza deberá iniciar la sesión nuevamente."
	    return (-2)
    END IF
    
    
    IF (post:estado_presu == 2) THEN
	    CALL CDSBusca_TxPresuDet
	    if (retval < 0) then
	    	errmsg common:errmsg_list,"La transacción de Cobranza debe ser la única del Presupuesto."
	    	return (-2)
	    end if
	END IF
		
  	end if
  	Call siaf:PRESfecha_hora
  	If ( Retval < 0 )
      	Return -1
    Endif

	//50437: La facturacion deberá hacerse solo en la Nis Dependiente (Sucursal Facturadora)
	IF (post:nisDep_CM != common:sucursal_activa) THEN
		errmsg common:errmsg_list,"La Nis Dependiente del cliente no se corresponde con la Sucursal Activa.\n No podrá realizar la Cobranza."
		return (-2)
	END IF    
    
	/*if (post:estado_presu == 2 || post:estado_presu == 3) then
		post:OperacionCob = TRUE
		post:OperacionAut = FALSE
		call post:CDSgrabo_CMCobranza
	endif*/

	/*esta validacion la hace el switch
	if (estado_presu != 4) then
			//Validaciones
		if (!ModalidadCC && !ModalidadCD) then
			errmsg common:errmsg_list,"Cliente Medio Sin Modalidad no tiene Facturas ni Comprobantes pendientes de Pago."
			return (-2)
		end if
	endif*/
	
END SUB

/*******/
