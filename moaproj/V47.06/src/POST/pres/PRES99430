/****o* Adelantos/OFB:post:PRES99430
* NOMBRE
*   OFB:post:PRES99430
* DESCRIPCION
*   Rutina de PreDisplay de la tx de Adelanto CM (99430)
* ENTRADAS
*   Parámetros de entrada de la rutina, sean argumentos o campos que tiene en cuenta
* SALIDAS
*   Campos modificados como resultado o returns cuyos valores sean no triviales
* IMPACTOS
*   Otros objetos que deberán ser analizados al modificar el objeto actual
* REFERENCIADO POR
*   LST:post:TRAN99430
* DOCUMENTACION
*	http://jira.sibs.net/jira/browse/AUT-1265
* SOURCE
*/
#include "postpres.h"

SUB post:PRES99430

	siaf:codigo_siaf =  99430
	siaf:moneda = "99"
	
	//Recupero datos de la presu
    call post:MISCValidoAdelanto
    	   
	IF (post:estado_presu != 2 && post:estado_presu != 3 && post:estado_presu != 4)
	    errmsg common:errmsg_list,"Inicie una Sesión con Cliente Medio para realizar el Adelanto."
	    return (-2)
    END IF
    
	//Validaciones
	if (post:estado_presu != 4) then
		    
    if (ConsumoAnticipo) then
		errmsg common:errmsg_list,"El cliente informó que desea consumir el Adelanto, por lo tanto no podrá realizar uno."
	    return (-2)
	endif
    
    if (post:consulta_ordenCM == "S")
	    errmsg common:errmsg_list,"Ud.se encuentra en una venta por Orden de Compra.\nNo podrá realizar la Facturacion."
	    return (-2)
	endif
		
    if (post:consulta_excepcionCM != "S" && post:nisDep_CM == common:sucursal_activa && \
    	(convenioAnticipo > 0 || post:convenio_lg > 0)) then
    else
    //IF (post:cli_tipo != CLIMED || !post:ModalidadAT)
	    errmsg common:errmsg_list,"El cliente no está habilitado para realizar un Adelanto."
	    return (-2)
    //END IF
	endif 

   /* CALL post:CDSServicio_99430
	IF (RETVAL < 0) THEN
	    return (-2)
	END IF*/
	post:PreDForFis = "RECIB"
		
    IF (ExcepSinLinea) THEN
	    errmsg common:errmsg_list,"La sesión se ha iniciado fuera de línea.\nPara realizar el Adelanto deberá iniciar la sesión nuevamente."
	    return (-2)
    END IF

	if (ModalidadTB) then
		errmsg common:errmsg_list,"El cliente informó que desea utilizar sus Transferencias Bancarias, por lo tanto no podrá realizar Adelantos."
	    return (-2)
	endif
    
    IF (post:estado_presu == 2) THEN
	    CALL CDSBusca_TxPresuDet
	    if (retval < 0) then
	    	errmsg common:errmsg_list,"La transacción de Adelanto debe ser la única del Presupuesto."
	    	return (-2)
	    end if
	END IF
		
  	end if
  	Call siaf:PRESfecha_hora
  	If ( Retval < 0 )
      	Return -1
    Endif
    
	
END SUB

/*******/
