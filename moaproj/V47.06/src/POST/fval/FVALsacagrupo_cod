/****o* Pendientes de agrupación/OFB:post:FVALsacagrupo_cod
* NOMBRE
*   OFB:post:FVALsacagrupo_cod
* DESCRIPCION
*   Comportamiento del objeto (obligatorio)
* ENTRADAS
*   Parámetros de entrada de la rutina, sean argumentos o campos que tiene en cuenta
* SALIDAS
*   Campos modificados como resultado o returns cuyos valores sean no triviales
* IMPACTOS
*   Otros objetos que deberán ser analizados al modificar el objeto actual
* REFERENCIADO POR
*   Objetos que llaman al objeto documentado (obligatorio)
* DOCUMENTACION
*   Documentación relevante que deberá ser actualizada por la modificación de la rutina
* SOURCE
*/
#include "postfval.h"

SUB post:FVALsacagrupo_cod
    IF (adt_sacagrupo_cod.NUMCHARS == 0) THEN
        IF (TESTFLAG(admin:mode_flags,imprimir)) THEN
            SETVALDONE adt_sacagrupo_cod
            SETVALDONE adt_sacagrupo_desc
            RETURN (0)
        END IF
		CALL siaf:FVALcampo_requerido
        IF (RETVAL < 0) THEN
            RETURN (-2)
        END IF
	END IF
    CALL CDSsacagrupo_load
    IF (RETVAL == 0) THEN
        adt_sacagrupo_cod = adt_sacagrupo_cod
        REFRESH adt_sacagrupo_cod
        REFRESH adt_sacagrupo_desc
        drv:button = 25
        CALL drv:but_enable
        drv:button = 26
        CALL drv:but_enable
        drv:button = 27
        CALL drv:but_disable
        drv:button = 28
        CALL drv:but_disable
    ELSE
        adt_sacagrupo_cod = post:adt_sacagrupo_cod
        REFRESH adt_sacagrupo_cod
	    CLEARFIELD adt_sacagrupo_desc
	    REFRESH adt_sacagrupo_desc
        drv:button = 25
        CALL drv:but_disable
        drv:button = 26
        CALL drv:but_disable
        drv:button = 27
        CALL drv:but_up_enable
        drv:button = 28
        CALL drv:but_disable
	END IF
    setvaldone adt_sacagrupo_cod
END SUB

/*******/
