/****o* Pendientes de agrupación/OFB:post:FVALNumCuenta
* NOMBRE
*   OFB:post:FVALNumCuenta
* DESCRIPCION
*   Comportamiento del objeto (obligatorio)
* ENTRADAS
*   Parámetros de entrada de la rutina, sean argumentos o campos que tiene en cuenta
* SALIDAS
*   Campos modificados como resultado o returns cuyos valores sean no triviales
* IMPACTOS
*   Otros objetos que deberán ser analizados al modificar el objeto actual
* REFERENCIADO POR
*   Objetos que llaman al objeto documentado (obligatorio)
* DOCUMENTACION
*   Documentación relevante que deberá ser actualizada por la modificación de la rutina
* SOURCE
*/
#include "postfval.h"

SUB post:FVALNumCuenta
LOCAL contador like PreDEst
LOCAL loc_NroCheque LIKE siaf:clmonto_lote

   IF (!TESTFLAG(tlr:tran_flags,correction))
      call csr:getrowcol post:NumCuenta
      ;call csr:getrowcol post:BancoPago
      let col =  retval
      siaf:moneda = ValorPago[col]
      loc_NroCheque = NumCuenta[col]
      call post:FVALmedio_pago
      if (RETVAL != 0)
         RETURN (-2)
      endif

      if (MedPTipMon == "CHEQ")
         if (currentfield.numchars == 0) then
            CALL siaf:FVALcampo_requerido
            if (RETVAL != 0)
               RETURN (-2)
            endif
         else
            /* Me aseguro que sea un nro de cheque valido */
            call csr:getrowcol post:NumCuenta
            let col = retval            
            if (loc_NroCheque > 99999999.0)
                errmsg lst:common:errmsg_list,"Nro Cheque Invalido"
                return (-2)
            end if
         endif
      endif

      call csr:getrowcol post:NumCuenta
      let col = retval
      let contador = 5
      while ((contador >= 1) && (contador != 6))
        contador = contador -1
        if ((NumCuenta.numchars != 0) && (contador != col))
            if ( BancoPago[col] == BancoPago[contador] ) && ( NumCuenta[col] == NumCuenta[contador] ) && (ValorPago[col] == ValorPago[contador]) && (Bco_Cuenta[col] == Bco_Cuenta[contador] )then
                contador = 6
            endif
        endif
      end while
      if (contador == 6 )
        msgbox " Nro Comprobante Repetido " 0 " "
        clearfield post:NumCuenta[col]
        refresh post:NumCuenta[col]
        nextfield post:NumCuenta[col]
        return (-2)
      endif
   endif
END SUB

/*******/
