/****o* Pendientes de agrupación/OFB:post:FVALcodigoSaco
* NOMBRE
*   OFB:post:FVALcodigoSaco
* DESCRIPCION
*   Comportamiento del objeto (obligatorio)
* ENTRADAS
*   Parámetros de entrada de la rutina, sean argumentos o campos que tiene en cuenta
* SALIDAS
*   Campos modificados como resultado o returns cuyos valores sean no triviales
* IMPACTOS
*   Otros objetos que deberán ser analizados al modificar el objeto actual
* REFERENCIADO POR
*   Objetos que llaman al objeto documentado (obligatorio)
* DOCUMENTACION
*   Documentación relevante que deberá ser actualizada por la modificación de la rutina
* SOURCE
*/
#include "postfval.h"

SUB post:FVALcodigoSaco
    /* Valida el código de Saco     */
    /* B. Petrella - May. 1998    */
    if (Saco.numchars!= 20) then
        let common:csr_string = "Código de Saco erróneo."
        errmsg common:errmsg_list,FLD:common:csr_string
        return (-2)
    endif
    /* Como el pattern debería ser XXX9999999X999999XXX -   */
    /* Valida que los dígitos sean nros. entre el 0 y el 9  */

    let post:idx = 3
    do
        if (substr(Saco,idx,1) != "0" && substr(Saco,idx,1) != "1" && \
            substr(Saco,idx,1) != "2" && substr(Saco,idx,1) != "3" && \
            substr(Saco,idx,1) != "4" && substr(Saco,idx,1) != "5" && \
            substr(Saco,idx,1) != "6" && substr(Saco,idx,1) != "7" && \
            substr(Saco,idx,1) != "8" && substr(Saco,idx,1) != "9") then
               let common:csr_string = "Código de Saco erróneo."
               errmsg common:errmsg_list,FLD:common:csr_string
               return (-2)
        endif
        let post:idx = post:idx + 1
        if (post:idx == 10)
            let post:idx = post:idx + 1
        endif
        if (post:idx > 16)
            break
        endif
    loop

    if (MedioTrans.numchars == 0) then
        unprotfield MedioTrans
        NEXTFIELD post:MedioTrans
        refresh MedioTrans
    end if
END SUB

/*******/
