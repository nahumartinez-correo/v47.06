/****o* Pendientes de agrupación/OFB:post:FVALrelMod_apert
* NOMBRE
*   OFB:post:FVALrelMod_apert
* DESCRIPCION
*   Comportamiento del objeto (obligatorio)
* ENTRADAS
*   Parámetros de entrada de la rutina, sean argumentos o campos que tiene en cuenta
* SALIDAS
*   Campos modificados como resultado o returns cuyos valores sean no triviales
* IMPACTOS
*   Otros objetos que deberán ser analizados al modificar el objeto actual
* REFERENCIADO POR
*   Objetos que llaman al objeto documentado (obligatorio)
* DOCUMENTACION
*   Documentación relevante que deberá ser actualizada por la modificación de la rutina
* SOURCE
*/
#include "postfval.h"

SUB post:FVALrelMod_apert
	IF (TESTFLAG(admin:mode_flags,imprimir)) THEN
		CALL MISCrelMod_setval
    		return (0)
	END IF
    	call csr:trimfield(adt_relMod_apertura)
    	IF (adt_relMod_apertura.numchars != 0)
		CALL CDSrelModAper_exis
		if (RETVAL >= 0)
			LET adt_relMod_apertura = adt_apertura_cod
		else
	    		CALL CDSrelMod_aper
	    		IF (RETVAL == 0) THEN
		  		LET adt_relMod_apertura = adt_apertura_cod
			ELSE
				RETURN (-2)
	    		END IF
		end if
	END IF
	CALL CDSexisRelMod
	IF (RETVAL == 0) THEN
      	drv:button = 25
        	CALL drv:but_enable
        	drv:button = 26
        	CALL drv:but_enable
        	drv:button = 27
        	CALL drv:but_disable
        	drv:button = 28
        	CALL drv:but_disable
    	ELSE
        	IF (RETVAL == -2) THEN
            	drv:button = 25
            	CALL drv:but_disable
            	drv:button = 26
            	CALL drv:but_disable
            	drv:button = 27
            	CALL drv:but_up_enable
            	drv:button = 28
            	CALL drv:but_disable
        	END IF
    	END IF
    CALL csr:proc_list(F_REFRESH,LST:LISTrelMod_flds)
END SUB

/*******/
