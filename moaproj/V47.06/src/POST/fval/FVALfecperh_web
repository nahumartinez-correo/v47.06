/****o* Pendientes de agrupación/OFB:post:FVALfecperh_web
* NOMBRE
*   OFB:post:FVALfecperh_web
* DESCRIPCION
*   Comportamiento del objeto (obligatorio)
* ENTRADAS
*   Parámetros de entrada de la rutina, sean argumentos o campos que tiene en cuenta
* SALIDAS
*   Campos modificados como resultado o returns cuyos valores sean no triviales
* IMPACTOS
*   Otros objetos que deberán ser analizados al modificar el objeto actual
* REFERENCIADO POR
*   Objetos que llaman al objeto documentado (obligatorio)
* DOCUMENTACION
*   Documentación relevante que deberá ser actualizada por la modificación de la rutina
* SOURCE
*/
#include "postfval.h"

SUB post:FVALfecperh_web
    call siaf:FVALcampo_requerido
    if (retval < 0) then
        return (-2)
    end if

    call csr:valid_date adt_fecperh_web
	if (retval != 0)
		clearfield adt_fecperh_web
		msgbox "FECHA PERIODO HASTA INVALIDA", OFB_ICONHAND ,"ERROR"
		return (-2)
	END IF

    call csr:date_compare(adt_fecperh_web,adt_fecpro_web)
    if (retval == 1) then
        errmsg LST:common:errmsg_list,"LA FECHA PERIODO HASTA DEBE SER MENOR O IGUAL A LA FECHA DE PROCESO"
        return (-2)
    end if

    call csr:date_compare(adt_fecperh_web,adt_fecfact_web)
    if (retval == 1) then
        errmsg LST:common:errmsg_list,"LA FECHA PERIODO HASTA DEBE SER MENOR O IGUAL A LA FECHA DE FACTURACION"
        return (-2)
    end if

    call csr:date_compare(adt_fecperd_web,adt_fecperh_web)
    if (retval == 1)
        errmsg LST:common:errmsg_list,"LA FECHA PERIODO DESDE DEBE SER MENOR O IGUAL A LA FECHA DE PERIODO HASTA"
        return (-2)
    end if
END SUB

/*******/
