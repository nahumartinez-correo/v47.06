/****o* Pendientes de agrupación/OFB:post:FVALirre_dif_fecha
* NOMBRE
*   OFB:post:FVALirre_dif_fecha
* DESCRIPCION
*   Comportamiento del objeto (obligatorio)
* ENTRADAS
*   Parámetros de entrada de la rutina, sean argumentos o campos que tiene en cuenta
* SALIDAS
*   Campos modificados como resultado o returns cuyos valores sean no triviales
* IMPACTOS
*   Otros objetos que deberán ser analizados al modificar el objeto actual
* REFERENCIADO POR
*   Objetos que llaman al objeto documentado (obligatorio)
* DOCUMENTACION
*   Documentación relevante que deberá ser actualizada por la modificación de la rutina
* SOURCE
*/
#include "postfval.h"

SUB post:FVALirre_dif_fecha
    local mes_actual like siaf:i
    local mes_ingresado like siaf:i

    call csr:date_subtract(common:system_date, currentfield)
    if (retval < 0)
        errmsg LST:common:errmsg_list,"SUPERA AL DIA DE HOY"
        return (-2)
    end if

   if (retval >7 ) then
        errmsg LST:common:errmsg_list,"SOLO PUEDE CONSULTAR MOVIMIENTOS DE LOS ULTIMOS 7 DIAS"
        return (-2)
    end if

    call csr:month_of(common:system_date)
    mes_actual = retval
    call csr:month_of(currentfield)
    mes_ingresado = retval

    if ((mes_actual - mes_ingresado > 1) || \
       (mes_actual - mes_ingresado < 0 && mes_actual == 1 && mes_ingresado < 12)) then
        errmsg LST:common:errmsg_list,"SOLO PUEDE CONSULTAR MOVIMIENTOS DEL MES CORRIENTE Y DEL ANTERIOR"
        return (-2)
    end if
END SUB



