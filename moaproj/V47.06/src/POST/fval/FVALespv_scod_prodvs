/****o* Pendientes de agrupación/OFB:post:FVALespv_scod_prodvs
* NOMBRE
*   OFB:post:FVALespv_scod_prodvs
* DESCRIPCION
*   Comportamiento del objeto (obligatorio)
* ENTRADAS
*   Parámetros de entrada de la rutina, sean argumentos o campos que tiene en cuenta
* SALIDAS
*   Campos modificados como resultado o returns cuyos valores sean no triviales
* IMPACTOS
*   Otros objetos que deberán ser analizados al modificar el objeto actual
* REFERENCIADO POR
*   Objetos que llaman al objeto documentado (obligatorio)
* DOCUMENTACION
*   Documentación relevante que deberá ser actualizada por la modificación de la rutina
* SOURCE
*/
#include "postfval.h"

SUB post:FVALespv_scod_prodvs
	CALL csr:trimfield(adt_prodvs_espv_scod)
	CALL csr:trimfield(adt_prodvs_espv_cod)
	IF ((adt_prodvs_espv_scod == "" || adt_prodvs_espv_scod.numchars == 0) && (adt_prodvs_espv_cod == "" || adt_prodvs_espv_cod.numchars == 0)) THEN
       	 //setvaldone adt_serv_espv_subcod
      	 RETURN 0
    END IF
	tes:adt_espv_cod = fld:adt_prodvs_espv_cod
    tes:adt_espv_subcod = fld:adt_prodvs_espv_scod
    CALL tes:CDSespecie_load
    LET lib:err_retval = RETVAL
    IF (RETVAL != 0) THEN
		drv:button = 1
        call drv:but_disable
        drv:button = 2
        call drv:but_disable
        drv:button = 3
        call drv:but_disable
        call tes:CDSespecie_sel
		LET lib:err_retval = RETVAL
    END IF
    IF (lib:err_retval != 0) //Toma el RETVAL del CDSespecie_sel, sino toma el de CDSespecie_load
    	clearfield adt_prodvs_espv_cod
		refresh adt_prodvs_espv_cod
    	clearfield adt_prodvs_espv_scod
		refresh adt_prodvs_espv_scod
	ELSE
    	fld:adt_prodvs_espv_cod = fld:tes:adt_espv_cod
		refresh adt_prodvs_espv_cod
    	fld:adt_prodvs_espv_scod = fld:tes:adt_espv_subcod
		refresh adt_prodvs_espv_scod	
	END IF
    //setvaldone adt_serv_prodvs
    drv:button = 1
    call drv:but_enable
    drv:button = 2
    call drv:but_enable
    drv:button = 3
    call drv:but_enable
    return lib:err_retval
END SUB

/*******/
