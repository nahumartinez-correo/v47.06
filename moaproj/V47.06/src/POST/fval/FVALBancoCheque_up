/****o* Pendientes de agrupación/OFB:post:FVALBancoCheque_up
* NOMBRE
*   OFB:post:FVALBancoCheque_up
* DESCRIPCION
*   Comportamiento del objeto (obligatorio)
* ENTRADAS
*   Parámetros de entrada de la rutina, sean argumentos o campos que tiene en cuenta
* SALIDAS
*   Campos modificados como resultado o returns cuyos valores sean no triviales
* IMPACTOS
*   Otros objetos que deberán ser analizados al modificar el objeto actual
* REFERENCIADO POR
*   Objetos que llaman al objeto documentado (obligatorio)
* DOCUMENTACION
*   Documentación relevante que deberá ser actualizada por la modificación de la rutina
* SOURCE
*/
#include "postfval.h"

SUB post:FVALBancoCheque_up
    
    IF (!TESTFLAG(tlr:tran_flags,correction))        
        
        if (cod_banco.numchars == 0) then
            call HELPBancoPago  
            if (retval < 0 ) then
                return retval
            else
                move siaf:adt_banco_codigo to cod_banco
                refresh cod_banco
            end if
        else
        
            siaf:adt_banco_codigo = cod_banco
            CDS SELECT from siaf:adt_banco_table becomes siaf:adt_banco_context where \
            siaf:adt_banco_codigo == siaf:adt_banco_codigo
            cds findfirst siaf:adt_banco_context nolock
            LET lib:err_retval = CDSRETVAL
            cds endselect siaf:adt_banco_context

            if (lib:err_retval == -801)
                msgbox "BANCO DEL CHEQUE INEXISTENTE",0x00,"ERROR"
                call post:HELPBancoPago
                if (retval < 0 ) then
                    return retval
                else
                    move siaf:adt_banco_codigo to cod_banco
                    refresh cod_banco
                end if
            end if
        end if
   end if
END SUB

/*******/
