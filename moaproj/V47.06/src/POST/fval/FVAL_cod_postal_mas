/****o* Pendientes de agrupación/OFB:post:FVAL_cod_postal_mas
* NOMBRE
*   OFB:post:FVAL_cod_postal_mas
* DESCRIPCION
*   Comportamiento del objeto (obligatorio)
* ENTRADAS
*   Parámetros de entrada de la rutina, sean argumentos o campos que tiene en cuenta
* SALIDAS
*   Campos modificados como resultado o returns cuyos valores sean no triviales
* IMPACTOS
*   Otros objetos que deberán ser analizados al modificar el objeto actual
* REFERENCIADO POR
*   Objetos que llaman al objeto documentado (obligatorio)
* DOCUMENTACION
*   Documentación relevante que deberá ser actualizada por la modificación de la rutina
* SOURCE
*/
#include "postfval.h"

SUB post:FVAL_cod_postal_mas(p_codigo)
	LOCAL ind LIKE siaf:i
	LOCAL aux LIKE post:SiNo
	LOCAL oka LIKE post:SiNo
	common:csr_string = p_codigo
	if (common:csr_string.NUMCHARS == 8) then
		while (ind < 8)
			aux = SUBSTR(common:csr_string,ind,1)
			if (((ind == 0 || ind == 5 || ind == 6 || ind == 7) && (aux < "A" || aux > "Z")) || \
			    ((ind == 1 || ind == 2 || ind == 3 || ind == 4) && (aux < "0" || aux > "9"))) then
			    oka = 1
			    break
			end if
			ind = ind + 1
		end while
	elseif (common:csr_string.NUMCHARS == 4) then
		while (ind < 4)
			aux = SUBSTR(common:csr_string,ind,1)
			if (aux < "0" || aux > "9") then
			    oka = 1
			    break
			end if
			ind = ind + 1
		end while
	elseif (common:csr_string.NUMCHARS > 0) then
	    oka = 1
	elseif (common:csr_string.NUMCHARS == 0) then
	    FPRINT common:csr_string "El código postal no puede ser nulo"
		return -2
	end if
	if (oka == 1)
	    FPRINT common:csr_string "Código postal incorrecto"
		return -2
	end if
END SUB

