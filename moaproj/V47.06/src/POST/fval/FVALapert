/****o* Pendientes de agrupación/OFB:post:FVALapert
* NOMBRE
*   OFB:post:FVALapert
* DESCRIPCION
*   Comportamiento del objeto (obligatorio)
* ENTRADAS
*   Parámetros de entrada de la rutina, sean argumentos o campos que tiene en cuenta
* SALIDAS
*   Campos modificados como resultado o returns cuyos valores sean no triviales
* IMPACTOS
*   Otros objetos que deberán ser analizados al modificar el objeto actual
* REFERENCIADO POR
*   Objetos que llaman al objeto documentado (obligatorio)
* DOCUMENTACION
*   Documentación relevante que deberá ser actualizada por la modificación de la rutina
* SOURCE
*/
#include "postfval.h"

SUB post:FVALapert
    CALL CDSapert_load
    IF (RETVAL != 0) THEN
        CALL CDStranapert_sel
        IF (RETVAL == 0) THEN
            apertura = SUBSTR (common:csr_string,0,2)
            REFRESH apertura
            NEXTFIELD apertura
        ELSE
            CLEARFIELD apertura
            REFRESH apertura
            NEXTFIELD apertura
            RETURN (-2)
        END IF
    END IF
    
  	/*MFM - Actualizo la marca de BH2*/
	IF (post:estado_presu == 3) THEN //Si estoy modificando una transacción
		IF (post:adt_relMod_desptipos == "TR") THEN
    		post:jnl_servicio_en_bh2 = "N"
    		refresh post:jnl_servicio_en_bh2
    		protfield post:jnl_servicio_en_bh2
    	ELSE
    		unprotfield post:jnl_servicio_en_bh2
    	END IF
    	IF (apert_aux == post:apertura) THEN
    		
    	ELSE
    		CALL MISCEnBlock_Horario(adt_serv_corteop,post:apertura)
			IF (RETVAL == 0) THEN
    			jnl_servicio_en_bh2 = "S"
    			refresh jnl_servicio_en_bh2
	    		protfield jnl_servicio_en_bh2
	    	ELSE
    			jnl_servicio_en_bh2 = "N"
	    		refresh jnl_servicio_en_bh2
    			IF (post:adt_relMod_desptipos == "TR") THEN
    				protfield jnl_servicio_en_bh2
    			ELSE
    				unprotfield jnl_servicio_en_bh2
    			END IF
    		END IF
    		apert_aux = post:apertura
    	END IF
    ELSE
    	if (jnl_servicio_en_bh2 == "S" && apert_aux == post:apertura) then 
    		//si está en S entiendo que lo forzaron o que está activado automáticamente
    		//si la apertura no se modificó entonces no valido nada!
    	else
	    	CALL MISCEnBlock_Horario(adt_serv_corteop,post:apertura)
			IF (RETVAL == 0) THEN
    			jnl_servicio_en_bh2 = "S"
    			refresh jnl_servicio_en_bh2
	    		protfield jnl_servicio_en_bh2
	    	ELSE
    			jnl_servicio_en_bh2 = "N"
	    		refresh jnl_servicio_en_bh2
    			IF (post:adt_relMod_desptipos == "TR") THEN
    				protfield jnl_servicio_en_bh2
    			ELSE
    				unprotfield jnl_servicio_en_bh2
    			END IF
    		END IF
    		apert_aux = post:apertura
    	endif
    END IF
    
    SETVALDONE post:apertura
    
END SUB

/*******/
