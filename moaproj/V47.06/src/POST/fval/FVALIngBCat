/****o* Pendientes de agrupación/OFB:post:FVALIngBCat
* NOMBRE
*   OFB:post:FVALIngBCat
* DESCRIPCION
*   Comportamiento del objeto (obligatorio)
* ENTRADAS
*   Parámetros de entrada de la rutina, sean argumentos o campos que tiene en cuenta
* SALIDAS
*   Campos modificados como resultado o returns cuyos valores sean no triviales
* IMPACTOS
*   Otros objetos que deberán ser analizados al modificar el objeto actual
* REFERENCIADO POR
*   Objetos que llaman al objeto documentado (obligatorio)
* DOCUMENTACION
*   Documentación relevante que deberá ser actualizada por la modificación de la rutina
* SOURCE
*/
#include "postfval.h"

SUB post:FVALIngBCat
 IF (TESTFLAG(admin:mode_flags,imprimir)) THEN
 	return (0)
 ELSE
	/*Chequeo que exista la relación entre la Provincia y la Categoría de
	Ingresos Brutos, de lo contrario la Tasa no es obligatoria - Gabriel Falciola*/
	clearfield adt_prvta_vinc_ivaIB
	adt_prvta_tasa_cod = CloCatCodIB
	call post:CDSProvCatTas_load
	if (retval == 0)
		setvaldone adt_prvta_pcia_cod
		CALL siaf:FVALcampo_requerido
		IF (RETVAL < 0) THEN
			RETURN (-2)
		END IF
	end if
	/*Si el atributo está en True, la tasa sebe ser la Categoría de IVA del
	Cliente  - Gabriel Falciola*/
	if (adt_prvta_vinc_ivaIB == "S")
		if (IngBCod == IvaCod)
	    	adt_TasCatIB_prov = adt_prvta_pcia_cod
    		adt_TasCatIB_catib = CloCatCodIB
    		adt_TasCatIB_cattas = IngBCod
    		CALL post:CDSTasCatIB_load
    		if (retval != 0)
				msgbox "No existe el Registro correspondiente en la tabla de Tasas de Ingresos Brutos",OFB_OK,"ERROR"
				return (-2)
			end if
		else
			msgbox "La Tasa debe ser igual a la Categoría de IVA del Cliente",OFB_OK,"ERROR"
			return (-2)
		end if
	else
    	if (IngBCod.numchars > 0)
    		adt_TasCatIB_prov = adt_prvta_pcia_cod
    		adt_TasCatIB_catib = CloCatCodIB
    		adt_TasCatIB_cattas = IngBCod
    		CALL post:CDSTasCatIB_load
    		IF (RETVAL != 0 ) THEN
				CALL CDSTasCatIB_selprov(adt_prvta_pcia_cod,CloCatCodIB)
        		if (retval == 0)
        			IngBCod = adt_TasCatIB_cattas
        		else
	        		clearfield IngBCod
    	    		REFRESH IngBCod
        			return (-2)
        		end if
	    	ENDIF
			REFRESH IngBCod
		end if
	end if
    setvaldone IngBCod
 END IF
END SUB

/*******/
