/****o* Cobro por Cuenta de Terceros/OFB:post:CDSpickComitMnl
* NOMBRE
*   OFB:post:CDSpickComitMnl
* DESCRIPCION
*   Recupera el valor Comitente del picklist
* ENTRADAS
*   Parámetros de entrada de la rutina, sean argumentos o campos que tiene en cuenta
* SALIDAS
*   Campos modificados como resultado o returns cuyos valores sean no triviales
* IMPACTOS
*   Otros objetos que deberán ser analizados al modificar el objeto actual
* REFERENCIADO POR
*   post:PBcomitente_CCT
* DOCUMENTACION
*   https://jirats.siemens.com.ar/jira/browse/AUT-1684
* SOURCE
*/
#include "postcds.h"

SUB post:CDSpickComitMnl
    LOCAL l_Comitente LIKE common:csr_string
    LOCAL l_Comitente_id LIKE common:csr_string
    LOCAL l_retval LIKE lib:err_retval 
        
    INIT 71 1
    CALL drv:MISCf_sacombopl ("comitente", common:csr_string,drv:button)
    
    l_retval = RETVAL
    IF (l_retval >= 0) THEN
        CLEARFIELD l_Comitente
        CLEARFIELD l_Comitente_id
 
        l_Comitente = SUBSTR (common:csr_string,0,36)
        l_Comitente_id = SUBSTR (common:csr_string,43,10)
        
        CALL post:MISCFtrim(l_Comitente)
        CALL post:MISCFtrim(l_Comitente_id)
        
        FPRINT post:comitente_CCT "%s", l_Comitente
        REFRESH post:comitente_CCT
        
        LET post:adt_cct_comitente = l_Comitente_id
    END IF

END SUB

/*******/
