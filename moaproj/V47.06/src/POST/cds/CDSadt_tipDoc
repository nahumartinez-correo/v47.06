/****o* Pendientes de agrupación/OFB:post:CDSadt_tipDoc
* NOMBRE
*   OFB:post:CDSadt_tipDoc
* DESCRIPCION
*   Comportamiento del objeto (obligatorio)
* ENTRADAS
*   Parámetros de entrada de la rutina, sean argumentos o campos que tiene en cuenta
* SALIDAS
*   Campos modificados como resultado o returns cuyos valores sean no triviales
* IMPACTOS
*   Otros objetos que deberán ser analizados al modificar el objeto actual
* REFERENCIADO POR
*   Objetos que llaman al objeto documentado (obligatorio)
* DOCUMENTACION
*   Documentación relevante que deberá ser actualizada por la modificación de la rutina
* SOURCE
*/
#include "postcds.h"

SUB post:CDSadt_tipDoc
LOCAL loc_IvaCod like IvaCod
LOCAL loc_TipoDoc_tipo like post:adt_TipoDoc_tipo
     
offset_0000:
    MOVE IvaCod TO loc_IvaCod
    MOVE post:adt_TipoDoc_tipo TO loc_TipoDoc_tipo //cgw:reservo tipo doc.

	CDS SELECT FROM "TipoDoc" BECOMES "TipoDoc_ctx"

    CDS MULTIDISPLAY "TipoDoc_ctx" LISTIvaRestr
    IF (CDSRETVAL == 0x01FD) THEN
        GOTO offset_0000
    END IF
    IF (cdsretval == 0) THEN
        MOVE loc_IvaCod TO IvaCod
        IF (siaf:codigo_siaf == 99023) THEN
       	    /*cgw:esta rutina es reutilizada en otras rutinas, por tal motivo, para el caso
       	    de la pantalla de clientes en fin de sesion, recuperamos el tipo de documento. */
       	    MOVE loc_TipoDoc_tipo TO post:adt_TipoDoc_tipo
       	    CALL post:CDSTipoDoc_load
       	    IF (RETVAL < 0) THEN
       	    	//clearfield post:adt_TipoDoc_tipo
       	    	clearfield post:adt_TipoDoc_desc
       	    END IF 
        ELSE
            //CALL CDSadt_ivacod_load
        END IF
        refresh post:adt_TipoDoc_tipo
        refresh post:adt_TipoDoc_desc
        CDS UNLOCK "TipoDoc_ctx"
	    CDS ENDSELECT "TipoDoc_ctx"
        RETURN (-2)
    END IF
    LET lib:err_retval = CDSRETVAL
	if (CDSRETVAL == -801)
		MsgBox "No existen Documentos habilitados para la Categoría de IVA",OFB_OK,"ERROR"
    	CDS UNLOCK "TipoDoc_ctx"
		CDS ENDSELECT "TipoDoc_ctx"
       	RETURN (-1)
	else
    	CALL lib:MISCcds_find_err
    	IF (RETVAL != 0) THEN
    		CDS UNLOCK "TipoDoc_ctx"
			CDS ENDSELECT "TipoDoc_ctx"
       		RETURN (-1)
    	END IF
    end if
	CDS EXTRACT "TipoDoc_ctx" ALL
    CDS UNLOCK "TipoDoc_ctx"
	CDS ENDSELECT "TipoDoc_ctx"

    RETURN (0)
END SUB

/*******/
