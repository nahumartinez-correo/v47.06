/****o* Registro VAP/OFB:post:CDSregVAP_Picksel
* NOMBRE
*   OFB:post:CDSregVAP_Picksel
* DESCRIPCION
*   Muestra las Piezas que han sido cargadas en la tabla temporal RegRPP_tmp
* ENTRADAS
*   Parámetros de entrada de la rutina, sean argumentos o campos que tiene en cuenta
* SALIDAS
*   Campos modificados como resultado o returns cuyos valores sean no triviales
* IMPACTOS
*   Otros objetos que deberán ser analizados al modificar el objeto actual
* REFERENCIADO POR
*   OFB:post:PBpieza_a_entregar
* DOCUMENTACION
*   Documentación relevante que deberá ser actualizada por la modificación de la rutina
* SOURCE
*/
#include "postcds.h"

SUB post:CDSregVAP_Picksel
	LOCAL l_retval like lib:err_retval
	LOCAL l_pieza like Pieza
	LOCAL l_rango LIKE common:csr_string
	LOCAL l_cadena LIKE common:csr_string
    CDS ENDSELECT "RegVAP_tmp_ctx"
    CDS SELECT FROM "RegVAP_tmp" BECOMES "RegVAP_tmp_ctx" WHERE \
        post:operator_vap == op:op_operator_id && \
        post:PresNro_vap == post:PresNro
    CDS FINDFIRST "RegVAP_tmp_ctx" LOCK
    l_retval = CDSRETVAL
            
    IF (l_retval == -801) THEN
        msgbox "No se encontraron piezas cargadas para Registrar", OFB_OK ,"Aviso"
        CDS ENDSELECT "RegVAP_tmp_ctx"
        l_retval = -2
    END IF
    fprint l_rango "0,13"
    call csr:f_sadroppl "PiezasSel"
    call csr:f_sanewpl "PiezasSel" pic:PICregVAP
    WHILE (l_retval == 0)
        CDS EXTRACT "RegVAP_tmp_ctx" \
        Pieza into l_pieza
        fprint l_cadena "%-s",l_pieza
        call csr:f_saaddpl "PiezasSel" l_cadena
        call csr:PickOp 4  "PiezasSel" l_rango 
        CDS FINDNEXT "RegVAP_tmp_ctx" NOLOCK
        l_retval = CDSRETVAL
    END WHILE
     
    CDS ENDSELECT "RegVAP_tmp_ctx"
    init 71 1
    CALL drv:MISCf_sacombopl ("PiezasSel", common:csr_string,drv:button)
    if (retval >= 0)
    	call  CSR:trimfield (common:csr_string,l_pieza)

        if (Pieza != l_pieza) then
            CALL CSR:proc_list(F_CLEAR,LST:post:LISTentrega_piezaAll)
            CALL CSR:proc_list(F_REFRESH,LST:post:LISTentrega_piezaAll)
            Pieza = l_pieza
        	l_retval = 0
        else
        	l_retval = 1
        end if
    else
        l_retval = -2
    end if
    init 71 0
    call csr:f_sadroppl "PiezasSel"
    return l_retval       
END SUB

/*******/
