/****o* Pendientes de agrupación/OFB:op:FVALtes_tlr_tesoro
* NOMBRE
*   OFB:op:FVALtes_tlr_tesoro
* DESCRIPCION
*   Comportamiento del objeto (obligatorio)
* ENTRADAS
*   Parámetros de entrada de la rutina, sean argumentos o campos que tiene en cuenta
* SALIDAS
*   Campos modificados como resultado o returns cuyos valores sean no triviales
* IMPACTOS
*   Otros objetos que deberán ser analizados al modificar el objeto actual
* REFERENCIADO POR
*   Objetos que llaman al objeto documentado (obligatorio)
* DOCUMENTACION
*   Documentación relevante que deberá ser actualizada por la modificación de la rutina
* SOURCE
*/
#include "opfval.h"

SUB op:FVALtes_tlr_tesoro
   
	CALL lib:FVALy_or_n
	if (retval <0) then
		if (op:bck_tesoro.numchars != 0) then
			move bck_tesoro to op:adt_tesoro
		else
			clearfield op:adt_tesoro
		endif
		refresh adt_tesoro
		return (retval)   
	end if
    
	IF (!testflag(op:op_chk_flags,tlr_auth) && !testflag(op:op_chk_flags,sup_auth) &&  !testflag(op:op_chk_flags,ret_auth))
		if (op:adt_tesoro == "S")
			MOVE "(L) PARA MANEJAR TESORO DEBE SER CAJERO O JEFE OF. O MERCHAN." TO drv:error_msg
			CALL OFB:drv:error_msg
		end if
		CALL op:adt_tes_clear
	ELSE
		IF (op:adt_tesoro == "S")   /*SI, maneja tesoro*/
			CALL op:CDSver_marca_tes
			if (retval < 0)
				CALL op:adt_tes_clear
				if (adt_tesforz_auth == "X")
					move " " to adt_tes_auth
					move " " to adt_tesforz_auth
					resetflag op:op_chk_flags,tes_auth
					ALTERCONTROLSET tag:op:CHK5
				end if
				return (-2)
			end if
			setflag op:op_chk_flags,tes_auth
			/*Si tengo que ponerle perfil de Supervisor porque antes no lo tenía
			seteo otro campo para tenerlo en cuenta si alguna vez le sacan el
			Tesoro - Gabriel Falciola*/
			if (adt_tes_auth != "X")
				move "X" to adt_tesforz_auth
			end if
			move "X" to adt_tes_auth
			move "S" to op_llave_tesoro
			// "S" INTO op_llave_tesoro
			ALTERCONTROLSET tag:op:CHK5
		ELSE                        /*NO, maneja tesoro*/
			/*CALL tes:CDSver_cierre
			if (retval < 0)
				MOVE "(L) EL TESORO NO ESTA CERRADO" TO drv:error_msg
				CALL OFB:drv:error_msg
				op:adt_tesoro = op:tesoro_aux
				refresh op:adt_tesoro
				return (-2)
			end if*/
			CALL op:adt_tes_clear
			/* MLD 24071998 Cualquier operador puede tener
			el flag de tesorero */
			;resetflag op:op_chk_flags,tes_auth
			;move " " to adt_tes_auth
			/*Si el perfil de Supervisor fue puesto automáticamente por el sistema
			cuando le asignaron el Tesoro, se lo saco - Gabriel Falciola*/
			if (adt_tesforz_auth == "X")
				move " " to adt_tes_auth
				move " " to adt_tesforz_auth
				resetflag op:op_chk_flags,tes_auth
				ALTERCONTROLSET tag:op:CHK5
			end if
		END IF
	END IF
END SUB

/*******/
