/****o* Pendientes de agrupación/OFB:template:draw_border
* NOMBRE
*   OFB:template:draw_border
* DESCRIPCION
*   Comportamiento del objeto (obligatorio)
* ENTRADAS
*   Parámetros de entrada de la rutina, sean argumentos o campos que tiene en cuenta
* SALIDAS
*   Campos modificados como resultado o returns cuyos valores sean no triviales
* IMPACTOS
*   Otros objetos que deberán ser analizados al modificar el objeto actual
* REFERENCIADO POR
*   Objetos que llaman al objeto documentado (obligatorio)
* DOCUMENTACION
*   Documentación relevante que deberá ser actualizada por la modificación de la rutina
* SOURCE
*/
#include "DESKTOPDRV_MNU.OFB.h"

sub template:draw_border(State,Col)
if (State == "OFF")
	setfcolor 14
else
	setfcolor 20
end if
select (Col)
	case 0
		DRAW  LINE 11,85,134,85,3,3,5
		DRAW  LINE 11,85,11,148,3,3,5
		DRAW  LINE 11,148,134,148,3,3,5
		DRAW  LINE 134,85,134,148,3,3,5
	break
	case 1
		DRAW  LINE 139,85,262,85,3,3,5
		DRAW  LINE 139,85,139,148,3,3,5
		DRAW  LINE 139,148,262,148,3,3,5
		DRAW  LINE 262,85,262,148,3,3,5
	break
	case 2
		DRAW  LINE 267,85,390,85,3,3,5
		DRAW  LINE 267,85,267,148,3,3,5
		DRAW  LINE 267,148,390,148,3,3,5
		DRAW  LINE 390,85,390,148,3,3,5
	break
	case 3
		DRAW  LINE 11,151,134,151,3,3,5
		DRAW  LINE 11,151,11,214,3,3,5
		DRAW  LINE 11,214,134,214,3,3,5
		DRAW  LINE 134,151,134,214,3,3,5
	break
	case 4
		DRAW  LINE 139,151,262,151,3,3,5
		DRAW  LINE 139,151,139,214,3,3,5
		DRAW  LINE 139,214,262,214,3,3,5
		DRAW  LINE 262,151,262,214,3,3,5
	break
	case 5
		DRAW  LINE 267,151,390,151,3,3,5
		DRAW  LINE 267,151,267,214,3,3,5
		DRAW  LINE 267,214,390,214,3,3,5
		DRAW  LINE 390,151,390,214,3,3,5
	break
	case 6
		DRAW  LINE 11,217,134,217,3,3,5
		DRAW  LINE 11,217,11,280,3,3,5
		DRAW  LINE 11,280,134,280,3,3,5
		DRAW  LINE 134,217,134,280,3,3,5
	break
	case 7
		DRAW  LINE 139,217,262,217,3,3,5
		DRAW  LINE 139,217,139,280,3,3,5
		DRAW  LINE 139,280,262,280,3,3,5
		DRAW  LINE 262,217,262,280,3,3,5
	break
	case 8
		DRAW  LINE 267,217,390,217,3,3,5
		DRAW  LINE 267,217,267,280,3,3,5
		DRAW  LINE 267,280,390,280,3,3,5
		DRAW  LINE 390,217,390,280,3,3,5
	break
	case 9
		draw line 72,285,335,285,3,3,5
		DRAW  LINE 72,285,72,333,3,3,5
		DRAW  LINE 72,333,335,333,3,3,5
		DRAW  LINE 335,285,335,333,3,3,5
	break
end select
end sub

