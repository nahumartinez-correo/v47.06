/****o* Pendientes de agrupación/OFB:template:check_list_but
* NOMBRE
*   OFB:template:check_list_but
* DESCRIPCION
*   Comportamiento del objeto (obligatorio)
* ENTRADAS
*   Parámetros de entrada de la rutina, sean argumentos o campos que tiene en cuenta
* SALIDAS
*   Campos modificados como resultado o returns cuyos valores sean no triviales
* IMPACTOS
*   Otros objetos que deberán ser analizados al modificar el objeto actual
* REFERENCIADO POR
*   Objetos que llaman al objeto documentado (obligatorio)
* DOCUMENTACION
*   Documentación relevante que deberá ser actualizada por la modificación de la rutina
* SOURCE
*/
#include "DESKTOPDRV_BUT.OFB.h"

	SUB template:check_list_but
	CALL  csr:getofbindx ms_template_appl ms_template_name INDms_call ms_template_obj
	CALL  csr:listcsr GETLIST INDms_call
	if (retval == -1)
		CALL  csr:devcsr_info "LIST drv:LISTdriver_but NOT IN DATA DICTIONARY"
		return -2
	END IF

	let max_members = retval - 1

	if (max_members < 1)
		CALL  csr:devcsr_info "NO MEMBERS IN TEMPLATE LIST"
		let lastkey = RT_ESC
		return (-1)
	END IF

	if (max_members > 21)
		CALL  csr:devcsr_info "MORE THAN 21 MEMBERS IN TEMPLATE LIST"
		let lastkey = RT_ESC
		return (-1)
	END IF

	CALL  csr:listcsr GETMEMBER 0
	CALL  csr:listcsr GETELEMENT 1 ms_template_obj ms_template_appl ms_template_name wkfld
	if (wkfld != "template")
		CALL  csr:devcsr_info "NOT A TEMPLATE LIST"
		let lastkey = RT_ESC
		return (-1)
	END IF
	END SUB

/*******/
