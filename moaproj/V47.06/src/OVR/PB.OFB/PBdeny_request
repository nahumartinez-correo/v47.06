/****o* Pendientes de agrupación/OFB:ovr:PBdeny_request
* NOMBRE
*   OFB:ovr:PBdeny_request
* DESCRIPCION
*   Comportamiento del objeto (obligatorio)
* ENTRADAS
*   Parámetros de entrada de la rutina, sean argumentos o campos que tiene en cuenta
* SALIDAS
*   Campos modificados como resultado o returns cuyos valores sean no triviales
* IMPACTOS
*   Otros objetos que deberán ser analizados al modificar el objeto actual
* REFERENCIADO POR
*   Objetos que llaman al objeto documentado (obligatorio)
* DOCUMENTACION
*   Documentación relevante que deberá ser actualizada por la modificación de la rutina
* SOURCE
*/
#include "ovrPB.OFB.h"

	SUB ovr:PBdeny_request
	IF (ro_req_product == "PP")
		MOVE DSC:ro_deny TO ro_reason_desc
		LET drv:INDpopup_but_list = LST:BUTovr_reason
		CALL  OFB:drv:popup_init
		POPUP ovr_reason
		CALL  OFB:drv:popup_exit
		IF (LASTKEY == RT_SEND || LASTKEY == RT_PAGEDOWN)
			/* Send pinnacle plus deny response */
			CALL  OFB:hcomm:SRQ_ro_send_resp
			/* some error in sending of override response */
			IF (RETVAL != 0)
				CALL  OFB:OVRro_cleanup
				GOTO exit
			END IF
			CALL  OFB:OVRro_pic_or_exit
			IF (NEXTKEY == RT_PAGEUP)
				GETKEY
				LET drv:next_screen = 0
				UNGETKEY RT_SEND
				GOTO exit:
			END IF
		ELSE
			CALL  OFB:OVRro_cleanup
			GOTO exit
		END IF
	ELSE
		/* Request is from pinnacle 8 workstation */
		/* Send pinnacle 8 deny response */
#if BASE_CFIG_COEX == 1
		CALL  OFB:coex:CEXp8_ovr_deny
#endif
		/* some error in sending of override response */
		IF (RETVAL != 0)
			CALL  OFB:OVRro_cleanup
			GOTO exit
		END IF
		CALL  OFB:OVRro_pic_or_exit
		IF (NEXTKEY == RT_PAGEUP)
			GETKEY
			LET drv:next_screen = 0
			UNGETKEY RT_SEND
			GOTO exit:
		END IF
	END IF
	UNGETKEY RT_ESC
exit:
	LET drv:button = drv:last_button
	CALL  OFB:drv:but_up_enable
	END SUB

/*******/
