/****o* Pendientes de agrupación/OFB:giros:FVALenvia_postal
* NOMBRE
*   OFB:giros:FVALenvia_postal
* DESCRIPCION
*   Comportamiento del objeto (obligatorio)
* ENTRADAS
*   Parámetros de entrada de la rutina, sean argumentos o campos que tiene en cuenta
* SALIDAS
*   Campos modificados como resultado o returns cuyos valores sean no triviales
* IMPACTOS
*   Otros objetos que deberán ser analizados al modificar el objeto actual
* REFERENCIADO POR
*   Objetos que llaman al objeto documentado (obligatorio)
* DOCUMENTACION
*   Documentación relevante que deberá ser actualizada por la modificación de la rutina
* SOURCE
*/
#include "girosfval.h"

SUB giros:FVALenvia_postal
	LOCAL cod_tt like TrackTrace_giros
	IF (TrackTrace_giros.numchars == 0)
		MSGBOX "DEBE INGRESAR UN TRACK & TRACE",0x00,"ERROR"
		RETURN (-2)
	END IF

    //Controlo la cantidad de dígitos, si es des 11 le agrego "AR"
    CALL post:MISCcant_digitos_tt(TrackTrace_giros,"3")	
	
	//Compruebo que los 2 primeros caracteres sean un T&T valido, en la tabla de CodTrack
	cod_tt = substr(TrackTrace_giros,0,2)
	CALL post:MISCverif_cod_tyt(cod_tt)
	If (RETVAL == 0) Then	
		//Compruebo que el digito verificador sea valido
		CALL post:MISCvalida_digito(TrackTrace_giros)
		If (RETVAL == 0) Then
			//Compruebo que los ultimos 2 digitos sean AR
			If (substr(TrackTrace_giros,11,2) != "AR") Then
				MSGBOX "EL TRACK & TRACE LEIDO NO ES CORRECTO",0x00,"ERROR"
				RETURN (-2)
			END IF
		ELSE
			RETURN (-2)
		END IF
	ELSE
		MSGBOX "EL TRACK & TRACE LEIDO NO ES CORRECTO",0x00,"ERROR"
		RETURN (-2)	
	END IF
END SUB

/*******/
