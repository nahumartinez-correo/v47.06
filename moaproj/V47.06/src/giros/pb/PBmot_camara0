/****o* Pendientes de agrupación/OFB:giros:PBmot_camara0
* NOMBRE
*   OFB:giros:PBmot_camara0
* DESCRIPCION
*   Comportamiento del objeto (obligatorio)
* ENTRADAS
*   Parámetros de entrada de la rutina, sean argumentos o campos que tiene en cuenta
* SALIDAS
*   Campos modificados como resultado o returns cuyos valores sean no triviales
* IMPACTOS
*   Otros objetos que deberán ser analizados al modificar el objeto actual
* REFERENCIADO POR
*   Objetos que llaman al objeto documentado (obligatorio)
* DOCUMENTACION
*   Documentación relevante que deberá ser actualizada por la modificación de la rutina
* SOURCE
*/
#include "girospb.h"

/* Inicio de Camara Compensadora */
sub giros:PBmot_camara0
	local len like common:local_int
	local pos like common:local_int
	call giros:determino_pos
	if (testflag(camara_flags,0))then /*prender*/
		cds select from MotVarios_tab becomes MotVarios_ctx where siaf:adt_motvarios_tran == siaf:codigo_siaf
		cds multidisplay MotVarios_ctx LISTmotivos
		if (lastkey == RT_ESC) then
			resetflag camara_flags,0
			altercontrolset PBcb0
			cds endselect MotVarios_ctx
			return (-2)
		end if
		if (cdsretval > 0) then
			call MISCmodif_PLBcamara(0,pos0,"S")
		else
			msgbox "No hay motivos de errores cargados",OFB_OK,"Atención"
			resetflag camara_flags,0
			altercontrolset PBcb0
			call MISCreset_camara
			RETURN (-2)
		end if
		call MISCreset_camara
		RETURN (0)
	else
	/*apagar*/
		call giros:MISCregistros_malos(0)
		if (retval == -2) then
			return (-2)
		end if
		/* sba 20000919 - Si Vino de la base con R08 no se puede modificar */
		;if (PicError_fld[0] == "R08") then
		if (PicError_fld[0] == "R08") && \
			(substr(PicDisplay_fld[0],27,1) == "S") then
			msgbox "No se puede alterar este estado",OFB_OK,"Advertencia"
			setflag camara_flags,0
			altercontrolset PBcb0
			return (-2)
		end if
		;if (PicError_fld[0] == "R06") || (PicError_fld[0] == "M09") then
		if (PicError_fld[0] == "R06") || (PicError_fld[0] == "M09") || \
			(PicError_fld[0] == "R08") then
			cds select from MotVarios_tab becomes MotVarios_ctx where siaf:adt_motvarios_tran == siaf:codigo_siaf
			cds multidisplay MotVarios_ctx LISTmotivos
			if (lastkey == RT_ESC) then
				setflag camara_flags,0
				altercontrolset PBcb0
				cds endselect MotVarios_ctx
				return (-2)
			end if
			if (cdsretval > 0) then
				call MISCmodif_PLBcamara(0,pos0,"N")
			else
				msgbox "No hay motivos de errores cargados",OFB_OK,"Atención"
				setflag camara_flags,0
				altercontrolset PBcb0
				call MISCreset_camara
				RETURN (-2)
			end if
			call MISCreset_camara
			setflag camara_flags,0
			altercontrolset PBcb0
			return (-2)
		end if
		call giros:MISCclear_camara(0,pos0)
	end if
	resetflag camara_flags,muevo
end sub

/*******/
