/****o* ABM´s/OFB:siaf:PCOLmensajes
* NOMBRE
*   OFB:siaf:PCOLmensajes
* DESCRIPCION
*   Hablita los botones para efectuar abm segun corresponda
* ENTRADAS
*   Parámetros de entrada de la rutina, sean argumentos o campos que tiene en cuenta
* SALIDAS
*   Campos modificados como resultado o returns cuyos valores sean no triviales
* IMPACTOS
*   Otros objetos que deberán ser analizados al modificar el objeto actual
* REFERENCIADO POR
*   post:TRANabm_msj_sist,post:MISCResaltarCampos,siaf:LISTMensajes_flds
* DOCUMENTACION
*   Realizado en base a la iniciativa 50253
* SOURCE
*/
#include "siafpcol.h"

SUB siaf:PCOLmensajes
	
	/*Desactiva el Highlit de los campos antes de mostrarlos en pantalla*/
   	CALL CSR:proc_list(F_NOHIGHLITE,LST:siaf:LISTMensajes_flds)
  	CALL CSR:proc_list(F_REFRESH,LST:siaf:LISTMensajes_flds)
		IF (op:Flag_temp == 1)//la transaccion se esta ejecutando desde modif. pendientes
			CALL post:CDSsel_temporal
				IF (RETVAL == 0) THEN
					IF (TESTFLAG(op:adt_temp_flag,update)) THEN
			  			CALL ABMmensajes_refresh
		      			CALL post:MISCset_sidebar(1,0,0,0)
						/*Carina- no ejecutan las Fval cuando los datos se extraen de la tabla temporal*/
						CALL CSR:proc_list(F_SETVALDONE,LST:siaf:LISTMensajes_flds)
						/*Carina- llama a una rutina que resalta los campos modificados*/
						CALL post:MISCResaltarCampos ("Mensajes")
						CALL CSR:proc_list(F_REFRESH,LST:siaf:LISTMensajes_flds)
		    		END IF
		    		IF (TESTFLAG(op:adt_temp_flag,delete)) THEN
			  			CALL ABMmensajes_refresh
		      			CALL post:MISCset_sidebar(0,1,0,0)
						/*Carina- no ejecutan las Fval cuando los datos se extraen de la tabla temporal*/
						CALL CSR:proc_list(F_SETVALDONE,LST:siaf:LISTMensajes_flds)
						/*Carina- llama a una rutina que resalta los campos modificados*/
						CALL post:MISCResaltarCampos ("Mensajes")
						CALL CSR:proc_list(F_REFRESH,LST:siaf:LISTMensajes_flds)
		    		END IF
		    	END IF
		    	ELSE
		    	IF (adt_msg_cod.NUMCHARS == 0) THEN
		      		drv:button = 0
		      		CALL drv:but_enable
		      		drv:button = 1
		      		CALL drv:but_enable
		      		CALL post:MISCset_sidebar(0,0,0,0)
		      		//CUANDO SE DECIDA HABILITAR EL BOTÓN IMPRIMIR DEBE REMPLAZARSE POR
		      		//CALL post:MISCset_sidebar(0,0,0,1)
		    	END IF
		END IF 
END SUB 

/*******/
