/****o* Oficios Judiciales/OFB:siaf:PBoficio
* NOMBRE
*   OFB:siaf:PBoficio
* DESCRIPCION
*   Selecciona los Oficios del lote en la tabla OfiJudi
* ENTRADAS
*   Parámetros de entrada de la rutina, sean argumentos o campos que tiene en cuenta
* SALIDAS
*   Campos modificados como resultado o returns cuyos valores sean no triviales
* IMPACTOS
*   Otros objetos que deberán ser analizados al modificar el objeto actual
* REFERENCIADO POR
*   siaf:BUT7210
* DOCUMENTACION
*   https://jirats.siemens.com.ar/jira/browse/AUT-1692
* SOURCE
*/
#include "siafPB.h"

SUB siaf:PBoficio
	LOCAL loc_retval LIKE lib:err_retval
	LOCAL l_last_button LIKE drv:last_button
	
	l_last_button = drv:last_button 
	drv:button = drv:last_button    
	CALL drv:but_down_disable
	CALL drv:all_but_disable
    
	CALL siaf:CDSbuscaOficio
	loc_retval = RETVAL

	CALL drv:back_but_status
	drv:button = l_last_button
	CALL drv:but_up_enable
	IF (loc_retval == 0) THEN
		//Habilita boton modificar y eliminar. Protege campos correspondientes.
		CALL siaf:MISCmodificar_oficio
		SETVALDONE siaf:adt_oju_cant
	ELSE
		//Inicializa para carga de un nuevo oficio y habilita boton agregar 
		CALL siaf:PBNuevo_oficio   	
	END IF
    
END SUB 

/*******/
