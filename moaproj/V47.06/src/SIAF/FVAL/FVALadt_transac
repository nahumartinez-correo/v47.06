/****o* Pendientes de agrupación/OFB:siaf:FVALadt_transac
* NOMBRE
*   OFB:siaf:FVALadt_transac
* DESCRIPCION
*   Comportamiento del objeto (obligatorio)
* ENTRADAS
*   Parámetros de entrada de la rutina, sean argumentos o campos que tiene en cuenta
* SALIDAS
*   Campos modificados como resultado o returns cuyos valores sean no triviales
* IMPACTOS
*   Otros objetos que deberán ser analizados al modificar el objeto actual
* REFERENCIADO POR
*   Objetos que llaman al objeto documentado (obligatorio)
* DOCUMENTACION
*   Documentación relevante que deberá ser actualizada por la modificación de la rutina
* SOURCE
*/
#include "siafFVAL.h"

SUB siaf:FVALadt_transac
 /* No ingresa ningún valor en adt_monfl_transac, da TAB y hace un multidisplay
    de la tabla de transacciones */
    IF (CURRENTFIELD.NUMCHARS == 0 || (CURRENTFIELD + 0) == 0) THEN
    	CDS SELECT FROM DSC:adt_tran_table BECOMES DSC:adt_tran_context
        drv:button = 0
        CALL drv:but_disable
        drv:button = 1    
        CALL drv:but_disable
        drv:button = 5
        CALL drv:but_disable       
        CDS MULTIDISPLAY DSC:adt_tran_context LISTadt_transac
        LET lib:err_retval = CDSRETVAL        
     /* Salio con Esc (no eligió nada) */
        IF (lib:err_retval == 0) THEN
            drv:button = 0
            CALL drv:but_enable
            drv:button = 1    
            CALL drv:but_enable
            drv:button = 5
            CALL drv:but_enable            
            return (-2)
        ELSE
         /* eligió un valor del multidisplay de la tabla transac */
            CDS EXTRACT DSC:adt_tran_context all    
            adt_monfl_transac = adt_tran_codigo
            drv:button = drv:last_button
            CALL drv:but_enable
            drv:button = 0
            CALL drv:but_enable
            drv:button = 1
            CALL drv:but_enable
            drv:button = 5
            CALL drv:but_enable              
        END IF      
   ELSE    
     /* Ingresa a mano un valor para el campo adt_monfl_transac */   
        adt_tran_codigo = CURRENTFIELD
        CALL CDSadt_tran_load
        IF (CDSRETVAL < 0) THEN
            ERRMSG LST:common:errmsg_list,ERRtran_no_disp
            RETURN (-2)
        END IF
   END IF
   refresh adt_monfl_transac 
   refresh adt_tran_desc    
   SETVALDONE adt_monfl_transac    
END SUB

/*******/
