;		BREAK
;		CASE ELSE                                
			report_name = "TOTALES OFICIOS JUDICIALES"
;		BREAK
;	END SELECT
	
; si el reporte se imprime horizontal	
;	p_scl = 90
;	p_ln = 46
;	p_size = 9

  //si el reporte se imprime vertical
	//p_scl = 95
	//p_ln = 66
	//p_size = 8
	p_scale = 100
	p_lines = 66
	p_textfont = 0
	
  CALL siaf:MISClst_RepOJU_Enc1(p_lineas_cl,l_imprimible,link_num,report_name,p_scale,p_lines,p_textfont) 
       
END SUB


