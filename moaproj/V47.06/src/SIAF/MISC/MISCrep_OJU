/****o* Oficios Judiciales/OFB:siaf:MISCrep_oju
* NOMBRE
*   OFB:siaf:MISCrep_oju
* DESCRIPCION
*   Llama a las rutinas para la generacion del reporte de Oficios Judiciales
* ENTRADAS
*   Parámetros de entrada de la rutina, sean argumentos o campos que tiene en cuenta
* SALIDAS
*   Campos modificados como resultado o returns cuyos valores sean no triviales
* IMPACTOS
*   Otros objetos que deberán ser analizados al modificar el objeto actual
* REFERENCIADO POR
*   siaf:SVALrepOJU
* DOCUMENTACION
*   https://jirats.siemens.com.ar/jira/browse/AUT-1692
*		SC50368
* SOURCE
*/
#include "siafMISC.h"

sub siaf:MISCrep_oju(p_fec_d,p_fec_a)

	LOCAL link_num       LIKE siaf:i             //canal de comunicacion del archivo
	LOCAL file_name      LIKE common:csr_string  //nombre del archivo
	LOCAL f_rep          LIKE siaf:i             //si es > 0 entonces se imprimio por lo menos un reporte
	LOCAL l_out          LIKE common:csr_string  //tipo de salida
	LOCAL caracter LIKE common:csr_string
	LOCAL caracter2 LIKE common:csr_string
	LOCAL l_fec_d LIKE post:fec_d
	LOCAL l_fec_a LIKE post:fec_a

	LET l_fec_d = p_fec_d
	LET l_fec_a = p_fec_a
	
	f_rep = 0 
	l_out = siaf:pantalla_impreso
	siaf:listado_totmot = 1
	
	link_num = 4
	file_name = "OJU.lis"
	
	while (f_rep < siaf:nro_copias) then

	CALL siaf:MISCcaseRepOJU(l_fec_d,l_fec_a)

		IF (RETVAL < 0) THEN
			//No hay filtros de seleccion para el reporte.
			RETURN (-2)
		END IF

		IF (siaf:pantalla_impreso == "A") THEN
        	file_name = giros:mdata_detalleArch
        	FPRINT caracter "%s", "\\"
        	FPRINT caracter2 "%s", "//"
        	CALL post:MISCremplazaCaracter(file_name,caracter2,caracter)
		END IF
	
		//abro el archivo
		CALL siaf:MISClst_RepOJU_open(file_name,link_num)
	
		//si no pudo abrir el archivo
		IF (RETVAL == -2) THEN
	    	RETURN RETVAL
		END IF
	
		FYIMSG LST:common:fyimsg_list, "(L) PROCESANDO LISTADO..."
		common:csr_string_tmp = "REPORTE DE OFICIOS JUDICIALES"
	
		//rutina que arma el encabezado del reporte
		CALL siaf:MISClst_RepOJU_enc

		//CALL giros:MISClst_RepLG(link_num)
		CALL siaf:MISClst_RepOJU(link_num)

		IF (RETVAL == 0) THEN 
			f_rep = f_rep + 1
		END IF 

		IF (f_rep > 0) THEN
			CALL giros:MISCImpVisorEditor(file_name,siaf:pantalla_impreso,link_num) 
		ELSE 
			CALL giros:MISCdeleteFile(file_name)
			RETURN (-2)
		END IF
	end while
  
end sub

/*******/
