/****o* Pendientes de agrupación/OFB:tes:CDSsuc_marca_ciedia
* NOMBRE
*   OFB:tes:CDSsuc_marca_ciedia
* DESCRIPCION
*   Comportamiento del objeto (obligatorio)
* ENTRADAS
*   Parámetros de entrada de la rutina, sean argumentos o campos que tiene en cuenta
* SALIDAS
*   Campos modificados como resultado o returns cuyos valores sean no triviales
* IMPACTOS
*   Otros objetos que deberán ser analizados al modificar el objeto actual
* REFERENCIADO POR
*   Objetos que llaman al objeto documentado (obligatorio)
* DOCUMENTACION
*   Documentación relevante que deberá ser actualizada por la modificación de la rutina
* SOURCE
*/
#include "tesCDS.h"

SUB tes:CDSsuc_marca_ciedia(prm_marca)
	local estado_marca like tes:suc_marca_ciedia

	/* por si se pasa algun otro tipo de marca como parametro */
	let estado_marca = prm_marca
	if (prm_marca != "") then
		let estado_marca = "X"
	end if

	/* actualizo la marca y la fecha */
	CDS SELECT FROM DSC:tes:DiaSuc_table BECOMES DSC:tes:DiaSuc_context \
	WHERE tes:suc_br_id == op:op_branch_id
	CDS FINDFIRST DSC:tes:DiaSuc_context LOCK
	let lib:err_retval = cdsretval
	if (lib:err_retval == -801) then
		errmsg common:errmsg_list,"No hay registros en la tabla DiaSuc"
		CDS ENDSELECT DSC:tes:DiaSuc_context
		return (-2)
	end if
	CDS EXTRACT DSC:tes:DiaSuc_context ALL
	let tes:suc_marca_ciedia = estado_marca
	CDS CLEARBUFFER DSC:DiaSuc_context
	CDS APPEND DSC:tes:DiaSuc_context tes:suc_marca_ciedia
	CDS UPDATE DSC:DiaSuc_context LOCK
	CDS CLEARBUFFER DSC:DiaSuc_context
	CDS ENDSELECT DSC:tes:DiaSuc_context
END SUB

/*******/
