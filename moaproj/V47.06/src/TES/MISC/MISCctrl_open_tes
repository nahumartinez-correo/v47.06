/****o* Pendientes de agrupación/OFB:tes:MISCctrl_open_tes
* NOMBRE
*   OFB:tes:MISCctrl_open_tes
* DESCRIPCION
*   Comportamiento del objeto (obligatorio)
* ENTRADAS
*   Parámetros de entrada de la rutina, sean argumentos o campos que tiene en cuenta
* SALIDAS
*   Campos modificados como resultado o returns cuyos valores sean no triviales
* IMPACTOS
*   Otros objetos que deberán ser analizados al modificar el objeto actual
* REFERENCIADO POR
*   Objetos que llaman al objeto documentado (obligatorio)
* DOCUMENTACION
*   Documentación relevante que deberá ser actualizada por la modificación de la rutina
* SOURCE
*/
#include "tesMISC.h"

SUB tes:MISCctrl_open_tes(fecha_guia,modo)

    select (modo)
	case "TODAY"
    		CDS SELECT tes:tes_marca_cierre, tes:tes_fecha \
    	     	FROM "tesoro" BECOMES "tesoro_ctx3" where \
        	tes:tes_suc_id == op:op_branch_id && \
        	tes:tes_fecha >= fecha_guia
    	break
	case "BEFORE"
    		CDS SELECT tes:tes_marca_cierre, tes:tes_fecha \
    		FROM "tesoro" BECOMES "tesoro_ctx3" where \
        	tes:tes_suc_id == op:op_branch_id && \
        	tes:tes_fecha < fecha_guia
    	break
    end select
    CDS FINDFIRST "tesoro_ctx3" NOLOCK
    if (cdsretval == -801)
        return 0   // El tesoro no esta abierto el día de hoy
    end if
    if (cdsretval == 0 ) then
        clearfield tes:tes_marca_cierre
        cds extract "tesoro_ctx3" all
        if (tes:tes_marca_cierre == "X") || (tes:tes_fecha == "") then
                return (0) // El tesoro no está abierto
        else
            if (modo == "TODAY")
    	    	let common:csr_string = "El Tesoro Está Abierto"
	    	errmsg common:errmsg_list,fld:common:csr_string
	    	CDS ENDSELECT "tesoro_ctx3"
	    end if
	    return (-2)
	end if
    end if
END SUB

