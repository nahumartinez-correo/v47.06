/****o* Pendientes de agrupación/OFB:drv:key_but_combo
* NOMBRE
*   OFB:drv:key_but_combo
* DESCRIPCION
*   Comportamiento del objeto (obligatorio)
* ENTRADAS
*   Parámetros de entrada de la rutina, sean argumentos o campos que tiene en cuenta
* SALIDAS
*   Campos modificados como resultado o returns cuyos valores sean no triviales
* IMPACTOS
*   Otros objetos que deberán ser analizados al modificar el objeto actual
* REFERENCIADO POR
*   Objetos que llaman al objeto documentado (obligatorio)
* DOCUMENTACION
*   Documentación relevante que deberá ser actualizada por la modificación de la rutina
* SOURCE
*/
#include "DesktopPB.h"

	SUB drv:key_but_combo
	LET button = key_button
	CALL  OFB:drv:but_status
	IF (RETVAL == -1 || down == 1 || disabled == 1)
		RETURN (-2)
	END IF
	LET save_sfore = sfore
	LET save_sback = sback
	LET save_fore = fore
	LET save_back = back
	LET save_dfore = dfore
	LET save_dback = dback
	LET save_attr = attr
	LET save_down = down
	LET save_hidden = hidden
	LET save_disabled = disabled
	IF (button >= SB0 && button <= SB9)
	    LET sfore = NOMOUSE_SFCOLOR
    	    LET sback = NOMOUSE_SBCOLOR
	ELSE
	    LET sfore = NOMOUSE_WFCOLOR
            LET sback = NOMOUSE_WBCOLOR
        END IF
        attr = 5
	CALL  OFB:but_redraw
	GETKEY
	LET button = key_button
//	IF (LASTKEY == 0x1BC)
	IF ((LASTKEY == RT_F28) || (LASTKEY == RT_F27) || \
            (LASTKEY == RT_F30) || \
            (LASTKEY == RT_SEND))
    	LET sfore = save_sfore
	    LET sback = save_sback
    	LET fore = save_fore
	    LET back = save_back
    	LET dfore = save_dfore
	    LET dback = save_dback
	    LET attr = save_attr
        LET down = save_down
        LET hidden = save_hidden
        LET disabled = save_disabled
		CALL  OFB:but_redraw
		CALL  OFB:but_call
		INIT 39 1
		RETURN
	END IF
   	LET sfore = save_sfore
    LET sback = save_sback
   	LET fore = save_fore
    LET back = save_back
   	LET dfore = save_dfore
    LET dback = save_dback
    LET attr = save_attr
    LET down = save_down
    LET hidden = save_hidden
    LET disabled = save_disabled
	CALL  OFB:but_redraw
	IF (LASTKEY == PREV_BUTTON)
		LET key_button = key_button - 1
		LET key_button_dir = -1
		RETURN (-1)
	END IF
	IF (LASTKEY == NEXT_BUTTON)
		LET key_button = key_button + 1
		LET key_button_dir = 1
		RETURN (-1)
	END IF
	INIT 39 1
	IF (LASTKEY == SB_BUTTON && key_button >= SB0)
		UNGETKEY CB_BUTTON
		RETURN
	END IF
	IF (LASTKEY == CB_BUTTON && key_button < SB0)
		UNGETKEY SB_BUTTON
		RETURN
	END IF
	UNGETKEY LASTKEY
END SUB

/*******/
