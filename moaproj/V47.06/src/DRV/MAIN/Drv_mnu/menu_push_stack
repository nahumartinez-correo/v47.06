/****o* Pendientes de agrupación/OFB:drv:menu_push_stack
* NOMBRE
*   OFB:drv:menu_push_stack
* DESCRIPCION
*   Comportamiento del objeto (obligatorio)
* ENTRADAS
*   Parámetros de entrada de la rutina, sean argumentos o campos que tiene en cuenta
* SALIDAS
*   Campos modificados como resultado o returns cuyos valores sean no triviales
* IMPACTOS
*   Otros objetos que deberán ser analizados al modificar el objeto actual
* REFERENCIADO POR
*   Objetos que llaman al objeto documentado (obligatorio)
* DOCUMENTACION
*   Documentación relevante que deberá ser actualizada por la modificación de la rutina
* SOURCE
*/
#include "MainDrv_mnu.h"

	SUB drv:menu_push_stack
	Local Lmenu_level Like common:local_int   //we need a local variable
	Local Lopcion_menu like drv:button

	let Lmenu_level = menu_level[dt_app]
	let menu_list_stack[dt_app][Lmenu_level] = INDbut_list[screen_active]
	CALL CSR:proc_list F_COPY LST:LISTmenu_title LST:LISTstack_menu
	
	/*Instancio dos campos que me permiten identificar desde una tran de qué menú vengo
	y cuál opción se seleccionó - Gabriel Falciola*/
	INDlast_menu = INDbut_list[screen_active]
	select (drv:button)
		CASE 0
			last_menu_opc = 1
			BREAK
		CASE 1
			last_menu_opc = 2
			BREAK
		CASE 2
			last_menu_opc = 3
			BREAK
		CASE 3
			last_menu_opc = 4
			BREAK
		CASE 4
			last_menu_opc = 5
			BREAK
		CASE 5
			last_menu_opc = 6
			BREAK
		CASE 6
			last_menu_opc = 7
			BREAK
		CASE 7
			last_menu_opc = 8
			BREAK
		CASE 8
			last_menu_opc = 9
			BREAK
		CASE 9
			last_menu_opc = 0
			BREAK
		end select	
	END SUB

